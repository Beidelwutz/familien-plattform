---
import BaseLayout from '../layouts/BaseLayout.astro';
import StickyHeader from '../components/layout/StickyHeader.astro';
---

<BaseLayout title="Registrieren - kiezling">
  <StickyHeader />
  <main class="min-h-screen bg-gray-50 flex items-center justify-center py-8 px-4">
    <div class="w-full max-w-md bg-white rounded-2xl shadow-card p-6 md:p-8">
      <div class="text-center mb-8">
        <h1 class="text-2xl font-bold text-gray-900 mb-2">Konto erstellen</h1>
        <p class="text-gray-500">Registriere dich kostenlos für Merkliste, Pläne und mehr</p>
      </div>

      <!-- Google Register Button -->
      <button type="button" id="google-register-btn" class="w-full flex items-center justify-center gap-3 py-3 bg-white border-2 border-gray-200 rounded-xl text-gray-700 font-medium hover:bg-gray-50 hover:border-gray-300 transition-colors mb-6">
        <svg class="w-5 h-5" viewBox="0 0 24 24">
          <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
          <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
          <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
          <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
        </svg>
        Mit Google registrieren
      </button>

      <div class="flex items-center gap-4 mb-6">
        <span class="flex-1 h-px bg-gray-200"></span>
        <span class="text-gray-400 text-sm">oder mit E-Mail</span>
        <span class="flex-1 h-px bg-gray-200"></span>
      </div>

      <form class="flex flex-col gap-5" id="register-form">
        <div class="flex flex-col gap-2">
          <label for="email" class="font-medium text-sm text-gray-700">E-Mail</label>
          <input type="email" id="email" name="email" required placeholder="deine@email.de" autocomplete="email"
            class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:border-primary-500 transition-colors" />
        </div>
        <div class="flex flex-col gap-2">
          <label for="password" class="font-medium text-sm text-gray-700">Passwort (min. 8 Zeichen)</label>
          <input type="password" id="password" name="password" required minlength="8" placeholder="••••••••" autocomplete="new-password"
            class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:border-primary-500 transition-colors" />
          <!-- Password Strength Indicator -->
          <div id="password-strength" class="hidden mt-2">
            <div class="flex gap-1 mb-1">
              <div id="strength-bar-1" class="h-1 flex-1 rounded bg-gray-200"></div>
              <div id="strength-bar-2" class="h-1 flex-1 rounded bg-gray-200"></div>
              <div id="strength-bar-3" class="h-1 flex-1 rounded bg-gray-200"></div>
              <div id="strength-bar-4" class="h-1 flex-1 rounded bg-gray-200"></div>
            </div>
            <p id="strength-text" class="text-xs text-gray-500"></p>
          </div>
        </div>
        <div class="flex flex-col gap-2">
          <label for="password2" class="font-medium text-sm text-gray-700">Passwort wiederholen</label>
          <input type="password" id="password2" name="password2" required minlength="8" placeholder="••••••••" autocomplete="new-password"
            class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:border-primary-500 transition-colors" />
          <p id="password-match" class="hidden text-xs"></p>
        </div>
        <button type="submit" id="email-register-btn" class="btn-primary w-full py-3 mt-2">Registrieren</button>
        <div class="hidden rounded-xl bg-red-50 text-red-700 px-4 py-3 text-sm text-center" id="register-error"></div>
        <div class="hidden rounded-xl bg-green-50 text-green-700 px-4 py-3 text-sm text-center" id="register-success"></div>
        <!-- Rate limit countdown -->
        <div class="hidden rounded-xl bg-yellow-50 text-yellow-700 px-4 py-3 text-sm text-center" id="rate-limit-warning">
          <p>Zu viele Anfragen. Bitte warte <span id="rate-limit-countdown">0</span> Sekunden.</p>
        </div>
      </form>

      <p class="text-center text-sm text-gray-500 mt-4">
        Mit der Registrierung akzeptierst du unsere <a href="/agb" class="text-primary-500 hover:underline">AGB</a> und <a href="/datenschutz" class="text-primary-500 hover:underline">Datenschutzerklärung</a>.
      </p>

      <p class="text-center text-sm text-gray-600 mt-6">
        Bereits registriert? <a href="/login" class="text-primary-500 hover:text-primary-600 font-semibold">Zum Login</a>
      </p>
    </div>
  </main>
</BaseLayout>

<script>
  import { signInWithGoogle, signUpWithEmail, getSession, isSupabaseConfigured } from '../lib/supabase';

  const form = document.getElementById('register-form') as HTMLFormElement;
  const errorEl = document.getElementById('register-error');
  const successEl = document.getElementById('register-success');
  const googleBtn = document.getElementById('google-register-btn');
  const emailBtn = document.getElementById('email-register-btn');
  const passwordInput = document.getElementById('password') as HTMLInputElement;
  const password2Input = document.getElementById('password2') as HTMLInputElement;
  const rateLimitWarning = document.getElementById('rate-limit-warning');
  const rateLimitCountdown = document.getElementById('rate-limit-countdown');

  // Password strength checker
  function checkPasswordStrength(password: string): number {
    let score = 0;
    if (password.length >= 8) score++;
    if (password.length >= 12) score++;
    if (/[a-z]/.test(password) && /[A-Z]/.test(password)) score++;
    if (/\d/.test(password)) score++;
    if (/[^a-zA-Z0-9]/.test(password)) score++;
    return Math.min(score, 4);
  }

  function updatePasswordStrength(password: string) {
    const strengthContainer = document.getElementById('password-strength');
    const strengthText = document.getElementById('strength-text');
    const bars = [
      document.getElementById('strength-bar-1'),
      document.getElementById('strength-bar-2'),
      document.getElementById('strength-bar-3'),
      document.getElementById('strength-bar-4')
    ];

    if (!password) {
      strengthContainer?.classList.add('hidden');
      return;
    }

    strengthContainer?.classList.remove('hidden');
    const strength = checkPasswordStrength(password);

    const colors = ['bg-red-500', 'bg-orange-500', 'bg-yellow-500', 'bg-green-500'];
    const texts = ['Sehr schwach', 'Schwach', 'Mittel', 'Stark'];

    bars.forEach((bar, index) => {
      if (bar) {
        bar.classList.remove('bg-red-500', 'bg-orange-500', 'bg-yellow-500', 'bg-green-500');
        if (index < strength) {
          bar.classList.add(colors[strength - 1]);
        } else {
          bar.classList.add('bg-gray-200');
        }
      }
    });

    if (strengthText) {
      strengthText.textContent = strength > 0 ? texts[strength - 1] : 'Sehr schwach';
      strengthText.className = `text-xs ${strength >= 3 ? 'text-green-600' : strength >= 2 ? 'text-yellow-600' : 'text-red-600'}`;
    }
  }

  function updatePasswordMatch() {
    const matchEl = document.getElementById('password-match');
    const password = passwordInput?.value;
    const password2 = password2Input?.value;

    if (!password2) {
      matchEl?.classList.add('hidden');
      return;
    }

    matchEl?.classList.remove('hidden');
    if (password === password2) {
      matchEl!.textContent = 'Passwörter stimmen überein';
      matchEl!.className = 'text-xs text-green-600';
    } else {
      matchEl!.textContent = 'Passwörter stimmen nicht überein';
      matchEl!.className = 'text-xs text-red-600';
    }
  }

  // Password strength and match listeners
  passwordInput?.addEventListener('input', (e) => {
    updatePasswordStrength((e.target as HTMLInputElement).value);
    updatePasswordMatch();
  });
  password2Input?.addEventListener('input', updatePasswordMatch);

  // Rate limit countdown
  let rateLimitTimer: number | null = null;

  function showRateLimitWarning(retryAfterMs: number) {
    if (rateLimitTimer) clearInterval(rateLimitTimer);
    
    const seconds = Math.ceil(retryAfterMs / 1000);
    if (rateLimitCountdown) rateLimitCountdown.textContent = String(seconds);
    rateLimitWarning?.classList.remove('hidden');
    errorEl?.classList.add('hidden');
    
    let remaining = seconds;
    rateLimitTimer = window.setInterval(() => {
      remaining--;
      if (rateLimitCountdown) rateLimitCountdown.textContent = String(remaining);
      if (remaining <= 0) {
        if (rateLimitTimer) clearInterval(rateLimitTimer);
        rateLimitWarning?.classList.add('hidden');
        setLoading(emailBtn, false);
        setLoading(googleBtn, false);
      }
    }, 1000);
  }

  // Check if user is already logged in
  async function checkExistingSession() {
    const session = await getSession();
    if (session) {
      const redirectTo = new URLSearchParams(window.location.search).get('redirect') || '/';
      window.location.href = redirectTo;
    }
  }

  // Show error message
  function showError(message: string) {
    if (errorEl) {
      errorEl.textContent = message;
      errorEl.classList.remove('hidden');
    }
    if (successEl) successEl.classList.add('hidden');
    rateLimitWarning?.classList.add('hidden');
  }

  // Show success message
  function showSuccess(message: string) {
    if (successEl) {
      successEl.textContent = message;
      successEl.classList.remove('hidden');
    }
    if (errorEl) errorEl.classList.add('hidden');
    rateLimitWarning?.classList.add('hidden');
  }

  // Set button loading state
  function setLoading(btn: HTMLElement | null, loading: boolean) {
    if (!btn) return;
    if (loading) {
      btn.setAttribute('disabled', 'true');
      btn.classList.add('opacity-60', 'cursor-not-allowed');
    } else {
      btn.removeAttribute('disabled');
      btn.classList.remove('opacity-60', 'cursor-not-allowed');
    }
  }

  // Google Register Handler
  googleBtn?.addEventListener('click', async () => {
    try {
      setLoading(googleBtn, true);
      if (errorEl) errorEl.classList.add('hidden');
      
      // Store redirect URL for callback
      const redirectTo = new URLSearchParams(window.location.search).get('redirect') || '/';
      localStorage.setItem('auth_redirect', redirectTo);
      
      await signInWithGoogle();
      // User will be redirected to Google, then to /auth/callback
    } catch (err) {
      showError('Google-Registrierung fehlgeschlagen. Bitte versuche es erneut.');
      setLoading(googleBtn, false);
    }
  });

  // Email Register Handler
  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    if (errorEl) errorEl.classList.add('hidden');
    if (successEl) successEl.classList.add('hidden');

    const formData = new FormData(form);
    const email = String(formData.get('email') ?? '').trim();
    const password = String(formData.get('password') ?? '');
    const password2 = String(formData.get('password2') ?? '');

    // Client-side validation
    if (password !== password2) {
      showError('Die Passwörter stimmen nicht überein.');
      return;
    }
    if (password.length < 8) {
      showError('Das Passwort muss mindestens 8 Zeichen haben.');
      return;
    }

    setLoading(emailBtn, true);

    try {
      const { session, user } = await signUpWithEmail(email, password, {
        role: 'parent'
      });

      if (user) {
        // Check if email confirmation is required
        if (!session) {
          showSuccess('Konto erstellt! Bitte bestätige deine E-Mail-Adresse über den Link in deinem Postfach.');
          form.reset();
          document.getElementById('password-strength')?.classList.add('hidden');
          document.getElementById('password-match')?.classList.add('hidden');
        } else {
          // Auto-confirmed (e.g., in development)
          showSuccess('Konto erstellt! Du wirst weitergeleitet...');
          localStorage.setItem('auth_token', session.access_token);
          
          const redirectTo = new URLSearchParams(window.location.search).get('redirect') || '/';
          setTimeout(() => {
            window.location.href = redirectTo;
          }, 1000);
        }
      } else {
        showError('Registrierung fehlgeschlagen. Bitte versuche es erneut.');
      }
    } catch (err: any) {
      // Handle rate limiting (429)
      if (err.status === 429 || err.message?.includes('rate limit') || err.message?.includes('Too many')) {
        const retryAfter = err.retry_after_ms || 60000;
        showRateLimitWarning(retryAfter);
        return;
      }
      
      // Handle specific Supabase errors
      if (err.message?.includes('User already registered')) {
        showError('Diese E-Mail-Adresse ist bereits registriert. Versuche dich anzumelden.');
      } else if (err.message?.includes('Password should be')) {
        showError('Das Passwort erfüllt nicht die Sicherheitsanforderungen.');
      } else if (err.message?.includes('Invalid email')) {
        showError('Bitte gib eine gültige E-Mail-Adresse ein.');
      } else {
        showError(err.message || 'Ein Fehler ist aufgetreten. Bitte versuche es erneut.');
      }
    } finally {
      setLoading(emailBtn, false);
    }
  });

  // Initialize
  if (!isSupabaseConfigured) {
    showError('Authentifizierung ist momentan nicht verfügbar. Bitte versuche es später erneut.');
  } else {
    checkExistingSession();
  }
</script>
