---
import BaseLayout from '../layouts/BaseLayout.astro';
import StickyHeader from '../components/layout/StickyHeader.astro';

const API_BASE = import.meta.env.PUBLIC_API_URL || 'http://localhost:4000';
// Date helpers
const today = new Date();
const tomorrow = new Date(today);
tomorrow.setDate(tomorrow.getDate() + 1);

const formatDateShort = (date: Date) => date.toLocaleDateString('de-DE', { 
  weekday: 'short', 
  day: 'numeric', 
  month: 'short' 
});

// Find next weekend
const getNextWeekend = () => {
  const date = new Date();
  const day = date.getDay();
  const daysUntilSaturday = day === 0 ? 6 : 6 - day;
  date.setDate(date.getDate() + daysUntilSaturday);
  return date;
};

const weekend = getNextWeekend();

// Categories
const categories = [
  { id: 'museum', icon: 'üèõÔ∏è', label: 'Museum' },
  { id: 'sport', icon: '‚öΩ', label: 'Sport' },
  { id: 'natur', icon: 'üå≥', label: 'Natur' },
  { id: 'spielplatz', icon: 'üé¢', label: 'Spielplatz' },
  { id: 'kreativ', icon: 'üé®', label: 'Kreativ' },
  { id: 'tiere', icon: 'üêæ', label: 'Tiere' },
];
---

<BaseLayout title="Tagesplan erstellen - kiezling Karlsruhe">
  <StickyHeader />
  
  <main class="min-h-screen bg-gradient-to-b from-primary-50 to-white py-8 md:py-12">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Header -->
      <header class="text-center mb-10">
        <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-3">
          Erstelle deinen perfekten Familientag
        </h1>
        <p class="text-lg text-gray-600">
          In unter 20 Sekunden zum stressfreien Plan mit Route und Plan B
        </p>
      </header>

      <!-- Plan Generator -->
      <div id="plan-generator" class="bg-white rounded-3xl shadow-lg p-6 md:p-8">
        
        <!-- Step 1: Children -->
        <section class="pb-8 mb-8 border-b border-gray-100">
          <div class="flex items-center gap-4 mb-6">
            <div class="w-10 h-10 bg-primary-500 text-white rounded-full flex items-center justify-center font-bold">1</div>
            <h2 class="text-xl font-semibold text-gray-900">Wie alt sind deine Kinder?</h2>
          </div>
          
          <div id="children-list" class="space-y-3 mb-4">
            <div class="flex items-center gap-3 child-input">
              <label class="text-sm font-medium text-gray-600 w-16">Kind 1</label>
              <input 
                type="number" 
                min="0" 
                max="18" 
                placeholder="Alter"
                class="w-24 px-4 py-2.5 border-2 border-gray-200 rounded-xl focus:border-primary-500 focus:outline-none text-center font-medium"
              />
              <span class="text-gray-400">Jahre</span>
            </div>
          </div>
          
          <button id="add-child" class="w-full py-3 border-2 border-dashed border-gray-200 rounded-xl text-gray-500 hover:border-primary-500 hover:text-primary-600 transition-colors flex items-center justify-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
            </svg>
            Kind hinzuf√ºgen
          </button>
        </section>

        <!-- Step 2: Date -->
        <section class="pb-8 mb-8 border-b border-gray-100">
          <div class="flex items-center gap-4 mb-6">
            <div class="w-10 h-10 bg-primary-500 text-white rounded-full flex items-center justify-center font-bold">2</div>
            <h2 class="text-xl font-semibold text-gray-900">Wann soll es losgehen?</h2>
          </div>
          
          <div class="grid grid-cols-2 gap-3">
            <label class="cursor-pointer">
              <input type="radio" name="plan-date" value="heute" class="hidden peer" checked />
              <div class="p-4 border-2 border-gray-200 rounded-xl peer-checked:border-primary-500 peer-checked:bg-primary-50 transition-all">
                <span class="font-semibold text-gray-900 block">Heute</span>
                <span class="text-sm text-gray-500">{formatDateShort(today)}</span>
              </div>
            </label>
            
            <label class="cursor-pointer">
              <input type="radio" name="plan-date" value="morgen" class="hidden peer" />
              <div class="p-4 border-2 border-gray-200 rounded-xl peer-checked:border-primary-500 peer-checked:bg-primary-50 transition-all">
                <span class="font-semibold text-gray-900 block">Morgen</span>
                <span class="text-sm text-gray-500">{formatDateShort(tomorrow)}</span>
              </div>
            </label>
            
            <label class="cursor-pointer">
              <input type="radio" name="plan-date" value="wochenende" class="hidden peer" />
              <div class="p-4 border-2 border-gray-200 rounded-xl peer-checked:border-primary-500 peer-checked:bg-primary-50 transition-all">
                <span class="font-semibold text-gray-900 block">Wochenende</span>
                <span class="text-sm text-gray-500">{formatDateShort(weekend)}</span>
              </div>
            </label>
            
            <label class="cursor-pointer">
              <input type="radio" name="plan-date" value="custom" class="hidden peer" />
              <div class="p-4 border-2 border-gray-200 rounded-xl peer-checked:border-primary-500 peer-checked:bg-primary-50 transition-all">
                <span class="font-semibold text-gray-900 block">Anderes Datum</span>
                <input 
                  type="date" 
                  id="custom-date" 
                  class="mt-1 w-full text-sm border border-gray-200 rounded-lg px-2 py-1"
                />
              </div>
            </label>
          </div>
        </section>

        <!-- Step 3: Budget -->
        <section class="pb-8 mb-8 border-b border-gray-100">
          <div class="flex items-center gap-4 mb-6">
            <div class="w-10 h-10 bg-primary-500 text-white rounded-full flex items-center justify-center font-bold">3</div>
            <h2 class="text-xl font-semibold text-gray-900">Was ist dein Budget?</h2>
          </div>
          
          <div class="mb-4">
            <input 
              type="range" 
              id="budget-slider" 
              min="0" 
              max="100" 
              value="30"
              class="w-full h-2 bg-gradient-to-r from-secondary-400 via-primary-400 to-accent-400 rounded-full appearance-none cursor-pointer [&::-webkit-slider-thumb]:appearance-none [&::-webkit-slider-thumb]:w-6 [&::-webkit-slider-thumb]:h-6 [&::-webkit-slider-thumb]:bg-white [&::-webkit-slider-thumb]:border-4 [&::-webkit-slider-thumb]:border-primary-500 [&::-webkit-slider-thumb]:rounded-full [&::-webkit-slider-thumb]:shadow-md [&::-webkit-slider-thumb]:cursor-pointer"
            />
            <div class="flex justify-between mt-2 text-sm text-gray-500">
              <span>Kostenlos</span>
              <span id="budget-value" class="text-lg font-bold text-primary-600">30‚Ç¨</span>
              <span>100‚Ç¨+</span>
            </div>
          </div>
          
          <div class="flex flex-wrap gap-2">
            <button class="chip" data-budget="0">Kostenlos</button>
            <button class="chip" data-budget="20">~20‚Ç¨</button>
            <button class="chip chip-active" data-budget="30">~30‚Ç¨</button>
            <button class="chip" data-budget="50">~50‚Ç¨</button>
            <button class="chip" data-budget="100">Egal</button>
          </div>
        </section>

        <!-- Step 4: Preferences -->
        <section class="pb-8 mb-8 border-b border-gray-100">
          <div class="flex items-center gap-4 mb-6">
            <div class="w-10 h-10 bg-primary-500 text-white rounded-full flex items-center justify-center font-bold">4</div>
            <h2 class="text-xl font-semibold text-gray-900">Was gef√§llt euch?</h2>
          </div>
          
          <!-- Indoor/Outdoor -->
          <div class="mb-6">
            <h3 class="text-sm font-medium text-gray-700 mb-3">Drinnen oder Drau√üen?</h3>
            <div class="flex gap-3">
              <label class="cursor-pointer flex-1">
                <input type="checkbox" name="location-type" value="indoor" class="hidden peer" checked />
                <div class="py-3 px-4 border-2 border-gray-200 rounded-xl text-center peer-checked:border-primary-500 peer-checked:bg-primary-50 transition-all">
                  <span class="text-xl block mb-1">üè†</span>
                  <span class="font-medium">Indoor</span>
                </div>
              </label>
              <label class="cursor-pointer flex-1">
                <input type="checkbox" name="location-type" value="outdoor" class="hidden peer" checked />
                <div class="py-3 px-4 border-2 border-gray-200 rounded-xl text-center peer-checked:border-primary-500 peer-checked:bg-primary-50 transition-all">
                  <span class="text-xl block mb-1">üå§Ô∏è</span>
                  <span class="font-medium">Outdoor</span>
                </div>
              </label>
            </div>
          </div>
          
          <!-- Categories -->
          <div>
            <h3 class="text-sm font-medium text-gray-700 mb-3">Kategorien (optional)</h3>
            <div class="flex flex-wrap gap-2">
              {categories.map(cat => (
                <label class="cursor-pointer">
                  <input type="checkbox" name="categories" value={cat.id} class="hidden peer" />
                  <span class="chip peer-checked:chip-active">{cat.icon} {cat.label}</span>
                </label>
              ))}
            </div>
          </div>
        </section>

        <!-- Generate Button -->
        <div class="text-center">
          <button id="generate-plan" class="btn-primary text-lg px-10 py-4 w-full sm:w-auto">
            <span class="mr-2">‚ú®</span>
            Plan erstellen
          </button>
          <p class="text-sm text-gray-500 mt-3">Kostenlos ¬∑ Keine Anmeldung n√∂tig</p>
        </div>
      </div>

      <!-- Plan Result (hidden initially) -->
      <div id="plan-result" class="hidden bg-white rounded-3xl shadow-lg p-6 md:p-8">
        <!-- Result Header -->
        <div class="text-center mb-8">
          <h2 class="text-2xl font-bold text-gray-900 mb-2">Dein Familientag</h2>
          <div class="flex items-center justify-center gap-4 text-gray-500">
            <span id="result-date">Heute, 15. Jan</span>
            <span>‚Ä¢</span>
            <span id="result-budget">Budget: ~30‚Ç¨</span>
          </div>
        </div>

        <!-- Timeline (filled by script from API) -->
        <div id="plan-timeline" class="relative pl-8 mb-8">
          <div class="absolute left-3 top-2 bottom-2 w-0.5 bg-gray-200"></div>
          <div id="plan-timeline-slots"></div>
        </div>

        <!-- Summary (filled by script) -->
        <div class="bg-primary-50 rounded-xl p-4 mb-6">
          <div class="flex items-center justify-between">
            <div>
              <span class="text-sm text-primary-700">Gesamtkosten</span>
              <span id="result-cost" class="text-2xl font-bold text-primary-600 ml-2">‚Äì</span>
            </div>
          </div>
        </div>

        <!-- Tips (filled by script) -->
        <div id="plan-tips" class="hidden mb-6 p-4 bg-amber-50 rounded-xl">
          <h4 class="font-semibold text-amber-800 mb-2">üí° Tipps</h4>
          <ul id="plan-tips-list" class="text-sm text-amber-700 list-disc list-inside space-y-1"></ul>
        </div>

        <!-- Plan B Toggle -->
        <div class="mb-8">
          <button id="plan-b-toggle" class="w-full py-3 px-4 bg-gray-100 hover:bg-gray-200 rounded-xl font-medium text-gray-700 transition-colors flex items-center justify-center gap-2">
            <span>üåßÔ∏è</span>
            Plan B anzeigen (bei Regen)
          </button>
          <div id="plan-b-content" class="hidden mt-4 p-4 bg-blue-50 rounded-xl">
            <p id="plan-b-reason" class="text-sm text-blue-700 mb-2"></p>
            <div id="plan-b-slots" class="space-y-2 text-sm text-blue-800"></div>
          </div>
        </div>

        <!-- Actions -->
        <div class="flex flex-col sm:flex-row gap-3">
          <button id="save-plan" class="btn-primary flex-1 flex items-center justify-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-3m-1 4l-3 3m0 0l-3-3m3 3V4"></path>
            </svg>
            Plan speichern
          </button>
          <button id="export-calendar" class="btn-secondary flex-1 flex items-center justify-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
            Kalender
          </button>
          <button id="share-plan" class="btn-secondary flex-1 flex items-center justify-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z"></path>
            </svg>
            Teilen
          </button>
        </div>

        <!-- New Plan -->
        <button id="new-plan" class="w-full mt-6 text-primary-600 hover:text-primary-700 font-medium flex items-center justify-center gap-2">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
          </svg>
          Neuen Plan erstellen
        </button>
      </div>

      <!-- Loading State -->
      <div id="plan-loading" class="hidden bg-white rounded-3xl shadow-lg p-12 text-center">
        <div class="w-16 h-16 border-4 border-gray-200 border-t-primary-500 rounded-full animate-spin mx-auto mb-6"></div>
        <p class="text-lg text-gray-600">Dein perfekter Familientag wird erstellt...</p>
        <p class="text-sm text-gray-400 mt-2">Das dauert nur wenige Sekunden</p>
      </div>
    </div>
  </main>
</BaseLayout>

<script is:inline define:vars={{ API_BASE }}>
  // Store current plan data for save/share
  let currentPlanData = null;

  function timeStr(iso) {
    if (!iso) return '';
    try {
      return new Date(iso).toLocaleTimeString('de-DE', { hour: '2-digit', minute: '2-digit' }) + ' Uhr';
    } catch { return ''; }
  }
  function formatResultDate(iso) {
    if (!iso) return '';
    try {
      return new Date(iso + 'T12:00:00').toLocaleDateString('de-DE', { weekday: 'long', day: 'numeric', month: 'short' });
    } catch { return iso || ''; }
  }

  // Add child functionality
  let childCount = 1;
  const addChildBtn = document.getElementById('add-child');
  const childrenList = document.getElementById('children-list');

  addChildBtn?.addEventListener('click', () => {
    childCount++;
    const childDiv = document.createElement('div');
    childDiv.className = 'flex items-center gap-3 child-input';
    childDiv.innerHTML = `
      <label class="text-sm font-medium text-gray-600 w-16">Kind ${childCount}</label>
      <input 
        type="number" 
        min="0" 
        max="18" 
        placeholder="Alter"
        class="w-24 px-4 py-2.5 border-2 border-gray-200 rounded-xl focus:border-primary-500 focus:outline-none text-center font-medium"
      />
      <span class="text-gray-400">Jahre</span>
      <button class="remove-child p-1 text-gray-400 hover:text-red-500 hover:bg-red-50 rounded-full transition-colors">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    `;
    childrenList?.appendChild(childDiv);
    
    childDiv.querySelector('.remove-child')?.addEventListener('click', () => {
      childDiv.remove();
    });
  });

  // Budget slider
  const budgetSlider = document.getElementById('budget-slider');
  const budgetValue = document.getElementById('budget-value');
  const budgetChips = document.querySelectorAll('[data-budget]');

  budgetSlider?.addEventListener('input', () => {
    const value = parseInt(budgetSlider.value, 10);
    if (budgetValue) {
      budgetValue.textContent = value === 0 ? 'Kostenlos' : value >= 100 ? '100‚Ç¨+' : `${value}‚Ç¨`;
    }
    budgetChips.forEach(chip => chip.classList.remove('chip-active'));
  });

  budgetChips.forEach(chip => {
    chip.addEventListener('click', () => {
      const value = chip.getAttribute('data-budget');
      if (budgetSlider && value) {
        budgetSlider.value = value;
        budgetSlider.dispatchEvent(new Event('input'));
      }
      budgetChips.forEach(c => c.classList.remove('chip-active'));
      chip.classList.add('chip-active');
    });
  });

  // Plan B toggle
  const planBToggle = document.getElementById('plan-b-toggle');
  const planBContent = document.getElementById('plan-b-content');

  planBToggle?.addEventListener('click', () => {
    planBContent?.classList.toggle('hidden');
  });

  // Generate plan
  const generateBtn = document.getElementById('generate-plan');
  const planGenerator = document.getElementById('plan-generator');
  const planResult = document.getElementById('plan-result');
  const planLoading = document.getElementById('plan-loading');

  generateBtn?.addEventListener('click', async () => {
    const childInputs = document.querySelectorAll('.child-input input[type="number"]');
    const childrenAges = Array.from(childInputs).map(el => parseInt(el.value, 10)).filter(n => !isNaN(n) && n >= 0 && n <= 18);
    if (childrenAges.length === 0) {
      alert('Bitte gib das Alter von mindestens einem Kind an.');
      return;
    }

    const dateRadio = document.querySelector('input[name="plan-date"]:checked');
    const dateVal = dateRadio?.value || 'heute';
    let dateIso = '';
    if (dateVal === 'heute') dateIso = new Date().toISOString().slice(0, 10);
    else if (dateVal === 'morgen') { const d = new Date(); d.setDate(d.getDate() + 1); dateIso = d.toISOString().slice(0, 10); }
    else if (dateVal === 'wochenende') {
      const d = new Date();
      const day = d.getDay();
      const toSat = day === 0 ? 6 : 6 - day;
      d.setDate(d.getDate() + toSat);
      dateIso = d.toISOString().slice(0, 10);
    } else {
      const customInput = document.getElementById('custom-date');
      dateIso = customInput?.value ? new Date(customInput.value).toISOString().slice(0, 10) : new Date().toISOString().slice(0, 10);
    }

    const budgetEl = document.getElementById('budget-slider');
    const budget = budgetEl ? parseInt(budgetEl.value, 10) || 50 : 50;

    const indoor = document.querySelector('input[name="location-type"][value="indoor"]')?.checked;
    const outdoor = document.querySelector('input[name="location-type"][value="outdoor"]')?.checked;
    const catChecks = document.querySelectorAll('input[name="categories"]:checked');
    const categories = Array.from(catChecks).map(c => c.value);

    const preferences = {};
    if (indoor && !outdoor) preferences.indoor = true;
    if (outdoor && !indoor) preferences.outdoor = true;
    if (categories.length) preferences.categories = categories;

    planGenerator?.classList.add('hidden');
    planLoading?.classList.remove('hidden');

    try {
      const res = await fetch(`${API_BASE}/api/plan/generate`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          children_ages: childrenAges,
          date: dateIso,
          budget,
          preferences: Object.keys(preferences).length ? preferences : undefined,
        }),
      });
      const json = await res.json();
      if (!res.ok) {
        planLoading?.classList.add('hidden');
        planGenerator?.classList.remove('hidden');
        alert(json?.message || 'Plan konnte nicht erstellt werden.');
        return;
      }
      const plan = json.data;
      
      // Store plan data for save/share functionality
      currentPlanData = plan;

      const elDate = document.getElementById('result-date');
      const elBudget = document.getElementById('result-budget');
      const elCost = document.getElementById('result-cost');
      if (elDate) elDate.textContent = formatResultDate(plan.date);
      if (elBudget) elBudget.textContent = budget === 0 ? 'Nur kostenlose Aktivit√§ten' : `Budget: ~${plan.budget}‚Ç¨`;
      if (elCost) elCost.textContent = (plan.estimated_cost ?? 0) === 0 ? 'Kostenlos' : `~${Math.round(plan.estimated_cost)}‚Ç¨`;

      const slotsContainer = document.getElementById('plan-timeline-slots');
      if (slotsContainer && plan.main_plan?.slots) {
        slotsContainer.innerHTML = plan.main_plan.slots.map((slot, i) => {
          const isLast = i === plan.main_plan.slots.length - 1;
          if (slot.type === 'break') {
            return `<div class="relative ${isLast ? '' : 'pb-8'}">
              <div class="absolute left-[-1.625rem] w-4 h-4 bg-amber-400 rounded-full border-4 border-white"></div>
              <div class="bg-amber-50 rounded-xl p-4">
                <span class="text-sm text-amber-700 font-medium">${timeStr(slot.start_time)}</span>
                <h4 class="font-semibold text-amber-900 mt-1">${(slot.title || 'Pause').replace(/</g,'&lt;')}</h4>
                ${slot.suggestion ? `<p class="text-sm text-amber-600 mt-1">${String(slot.suggestion).replace(/</g,'&lt;')}</p>` : ''}
              </div>
            </div>`;
          }
          const e = slot.event || {};
          const title = (e.title || 'Aktivit√§t').replace(/</g,'&lt;');
          const desc = (e.description_short || '').replace(/</g,'&lt;');
          const badge = e.is_indoor ? 'badge-indoor">üè† Indoor' : (e.is_outdoor ? 'badge-outdoor">üå≥ Outdoor' : '');
          const price = e.price_type === 'free' ? 'Kostenlos' : (e.price_min ? `ab ${e.price_min}‚Ç¨` : '');
          return `<div class="relative ${isLast ? '' : 'pb-8'}">
            <div class="absolute left-[-1.625rem] w-4 h-4 bg-primary-500 rounded-full border-4 border-white"></div>
            <div class="bg-gray-50 rounded-xl p-4">
              <div class="flex items-start justify-between">
                <div>
                  <span class="text-sm text-primary-600 font-medium">${timeStr(slot.start_time)}</span>
                  <h4 class="font-semibold text-gray-900 mt-1">${e.id ? `<a href="/event/${e.id}" class="hover:text-primary-600">${title}</a>` : title}</h4>
                  ${desc ? `<p class="text-sm text-gray-500 mt-1">${desc}</p>` : ''}
                  <div class="flex gap-2 mt-2">
                    ${badge ? `<span class="badge ${badge}</span>` : ''}
                    <span class="text-xs text-gray-400">~${slot.duration_minutes || 90} Min.</span>
                  </div>
                </div>
                <span class="text-sm font-medium text-gray-700">${price}</span>
              </div>
            </div>
          </div>`;
        }).join('');
      }

      const tipsEl = document.getElementById('plan-tips');
      const tipsList = document.getElementById('plan-tips-list');
      if (plan.tips && plan.tips.length && tipsList) {
        tipsList.innerHTML = plan.tips.map((t) => `<li>${String(t).replace(/</g,'&lt;')}</li>`).join('');
        tipsEl?.classList.remove('hidden');
      } else {
        tipsEl?.classList.add('hidden');
      }

      const planBReason = document.getElementById('plan-b-reason');
      const planBSlots = document.getElementById('plan-b-slots');
      if (planBReason && plan.plan_b) {
        planBReason.textContent = plan.plan_b.reason || 'Bei Regen oder wenn ausgebucht';
        if (planBSlots && plan.plan_b.slots?.length) {
          planBSlots.innerHTML = plan.plan_b.slots.map(s => {
            const e = s.event || {};
            return `<div>${timeStr(s.start_time)} ‚Äì ${(e.title || '').replace(/</g,'&lt;')}</div>`;
          }).join('');
        } else {
          planBSlots.innerHTML = '';
        }
      }
      document.getElementById('plan-b-content')?.classList.add('hidden');

      planLoading?.classList.add('hidden');
      planResult?.classList.remove('hidden');
      planResult?.scrollIntoView({ behavior: 'smooth' });
    } catch (err) {
      console.error(err);
      planLoading?.classList.add('hidden');
      planGenerator?.classList.remove('hidden');
      alert('Verbindungsfehler. Bitte sp√§ter erneut versuchen.');
    }
  });

  // New plan button
  const newPlanBtn = document.getElementById('new-plan');

  newPlanBtn?.addEventListener('click', () => {
    planResult?.classList.add('hidden');
    planGenerator?.classList.remove('hidden');
    planGenerator?.scrollIntoView({ behavior: 'smooth' });
  });

  // Action buttons
  document.getElementById('save-plan')?.addEventListener('click', async () => {
    if (!currentPlanData) {
      alert('Kein Plan zum Speichern vorhanden.');
      return;
    }

    const token = localStorage.getItem('auth_token');
    const saveBtn = document.getElementById('save-plan');
    
    try {
      if (saveBtn) {
        saveBtn.textContent = 'Speichern...';
        saveBtn.disabled = true;
      }

      const response = await fetch(`${API_BASE}/api/plan/save`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          ...(token ? { 'Authorization': `Bearer ${token}` } : {})
        },
        body: JSON.stringify({
          date: currentPlanData.date,
          children_ages: currentPlanData.children_ages,
          budget: currentPlanData.budget,
          slots: currentPlanData.main_plan?.slots || [],
          plan_b_slots: currentPlanData.plan_b?.slots || [],
        }),
      });

      const data = await response.json();

      if (response.ok) {
        // Update URL with plan ID for sharing
        const planUrl = `${window.location.origin}/plan/${data.data.id}`;
        history.replaceState(null, '', `/plan?saved=${data.data.id}`);
        
        alert(`Plan gespeichert! Du kannst ihn jetzt teilen:\n${planUrl}`);
        
        // Update share button to use saved plan URL
        currentPlanData.savedId = data.data.id;
      } else {
        throw new Error(data.error?.message || 'Speichern fehlgeschlagen');
      }
    } catch (error) {
      alert('Fehler beim Speichern: ' + error.message);
    } finally {
      if (saveBtn) {
        saveBtn.textContent = 'üíæ Speichern';
        saveBtn.disabled = false;
      }
    }
  });

  document.getElementById('export-calendar')?.addEventListener('click', async () => {
    if (!currentPlanData?.main_plan?.slots) {
      alert('Kein Plan zum Exportieren vorhanden.');
      return;
    }

    // Generate iCal content for the plan
    const slots = currentPlanData.main_plan.slots.filter(s => s.event);
    
    if (slots.length === 0) {
      alert('Keine Events im Plan zum Exportieren.');
      return;
    }

    const formatICalDate = (date) => {
      return new Date(date).toISOString().replace(/[-:]/g, '').replace(/\.\d{3}/, '');
    };

    const escapeIcal = (str) => {
      if (!str) return '';
      return str.replace(/\\/g, '\\\\').replace(/;/g, '\\;').replace(/,/g, '\\,').replace(/\n/g, '\\n');
    };

    let icalEvents = '';
    for (const slot of slots) {
      const e = slot.event;
      icalEvents += `BEGIN:VEVENT
UID:plan-${Date.now()}-${e.id}@kiezling.com
DTSTAMP:${formatICalDate(new Date())}
DTSTART:${formatICalDate(slot.start_time)}
DTEND:${formatICalDate(slot.end_time)}
SUMMARY:${escapeIcal(e.title)}
DESCRIPTION:${escapeIcal(e.description_short || '')}
LOCATION:${escapeIcal(e.location_address || '')}
END:VEVENT
`;
    }

    const icalContent = `BEGIN:VCALENDAR
VERSION:2.0
PRODID:-//Kiezling//Tagesplan//DE
CALSCALE:GREGORIAN
METHOD:PUBLISH
X-WR-CALNAME:Familientag ${currentPlanData.date}
X-WR-TIMEZONE:Europe/Berlin
${icalEvents}END:VCALENDAR`;

    // Download the iCal file
    const blob = new Blob([icalContent], { type: 'text/calendar;charset=utf-8' });
    const url = window.URL.createObjectURL(blob);
    const a = document.createElement('a');
    a.href = url;
    a.download = `kiezling-tag-${currentPlanData.date}.ics`;
    document.body.appendChild(a);
    a.click();
    document.body.removeChild(a);
    window.URL.revokeObjectURL(url);
  });

  document.getElementById('share-plan')?.addEventListener('click', async () => {
    let shareUrl = window.location.href;
    let shareTitle = 'Mein Familientag';
    
    // If plan was saved, use the saved plan URL
    if (currentPlanData?.savedId) {
      shareUrl = `${window.location.origin}/plan/${currentPlanData.savedId}`;
      shareTitle = `Familientag am ${new Date(currentPlanData.date).toLocaleDateString('de-DE')}`;
    }

    if (navigator.share) {
      try {
        await navigator.share({
          title: shareTitle,
          text: 'Schau dir meinen Familientag an!',
          url: shareUrl,
        });
      } catch (err) {
        // User cancelled or error
        if (err.name !== 'AbortError') {
          copyToClipboard(shareUrl);
        }
      }
    } else {
      copyToClipboard(shareUrl);
    }
  });

  function copyToClipboard(text) {
    navigator.clipboard.writeText(text).then(() => {
      alert('Link kopiert!\n' + text);
    }).catch(() => {
      // Fallback
      prompt('Link zum Teilen:', text);
    });
  }

</script>
