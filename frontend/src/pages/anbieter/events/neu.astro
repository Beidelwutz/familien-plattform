---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import StickyHeader from '../../../components/layout/StickyHeader.astro';
const API_BASE = import.meta.env.PUBLIC_API_URL || 'http://localhost:4000';
---

<BaseLayout title="Event erstellen - kiezling Anbieter">
  <StickyHeader />
  <main class="min-h-screen bg-gray-50 py-8 px-4">
    <div class="max-w-3xl mx-auto">
      <!-- Loading State -->
      <div id="loading-state" class="flex items-center justify-center min-h-[40vh]">
        <div class="text-center">
          <div class="w-12 h-12 border-4 border-primary-500 border-t-transparent rounded-full animate-spin mx-auto mb-4"></div>
          <p class="text-gray-500">Wird geladen...</p>
        </div>
      </div>

      <!-- Auth Required -->
      <div id="auth-required" class="hidden">
        <div class="bg-white rounded-2xl shadow-card p-8 text-center">
          <div class="w-16 h-16 bg-yellow-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
            </svg>
          </div>
          <h1 class="text-xl font-bold text-gray-900 mb-2">Anmeldung erforderlich</h1>
          <p class="text-gray-500 mb-6">Bitte melde dich als Anbieter an, um Events zu erstellen.</p>
          <a href="/anbieter/login" class="btn-primary inline-block px-6 py-3">Zur Anmeldung</a>
        </div>
      </div>

      <!-- Not Verified Warning -->
      <div id="not-verified-warning" class="hidden">
        <div class="bg-white rounded-2xl shadow-card p-8 text-center">
          <div class="w-16 h-16 bg-yellow-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h1 class="text-xl font-bold text-gray-900 mb-2">Verifizierung ausstehend</h1>
          <p class="text-gray-500 mb-6">Dein Anbieter-Profil wird noch von uns geprüft. Sobald die Verifizierung abgeschlossen ist, kannst du Events erstellen.</p>
          <a href="/anbieter/dashboard" class="btn-secondary inline-block px-6 py-3">Zurück zum Dashboard</a>
        </div>
      </div>

      <!-- Event Form -->
      <div id="event-form-container" class="hidden">
        <div class="flex items-center justify-between mb-6">
          <div>
            <a href="/anbieter/dashboard" class="text-gray-500 hover:text-gray-700 text-sm mb-2 inline-flex items-center gap-1">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
              </svg>
              Zurück
            </a>
            <h1 class="text-2xl font-bold text-gray-900">Neues Event erstellen</h1>
          </div>
        </div>

        <form id="event-form" class="space-y-6">
          <!-- Basic Info -->
          <div class="bg-white rounded-2xl shadow-card p-6">
            <h2 class="font-semibold text-gray-900 mb-4">Grundinformationen</h2>
            
            <div class="space-y-4">
              <div>
                <label for="title" class="block font-medium text-sm text-gray-700 mb-1">Titel *</label>
                <input type="text" id="title" name="title" required maxlength="200"
                  placeholder="z.B. Kindertheater im Park"
                  class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:border-primary-500 transition-colors" />
              </div>

              <div>
                <label for="description_short" class="block font-medium text-sm text-gray-700 mb-1">Kurzbeschreibung</label>
                <textarea id="description_short" name="description_short" rows="2" maxlength="500"
                  placeholder="Eine kurze Beschreibung für die Übersicht (max. 500 Zeichen)"
                  class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:border-primary-500 transition-colors"></textarea>
              </div>

              <div>
                <label for="description_long" class="block font-medium text-sm text-gray-700 mb-1">Ausführliche Beschreibung</label>
                <textarea id="description_long" name="description_long" rows="5"
                  placeholder="Beschreibe das Event ausführlich: Was erwartet die Familien? Was sollten sie mitbringen?"
                  class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:border-primary-500 transition-colors"></textarea>
              </div>
            </div>
          </div>

          <!-- Date & Time -->
          <div class="bg-white rounded-2xl shadow-card p-6">
            <h2 class="font-semibold text-gray-900 mb-4">Datum und Uhrzeit</h2>
            
            <div class="grid md:grid-cols-2 gap-4">
              <div>
                <label for="start_date" class="block font-medium text-sm text-gray-700 mb-1">Startdatum *</label>
                <input type="date" id="start_date" name="start_date" required
                  class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:border-primary-500 transition-colors" />
              </div>

              <div>
                <label for="start_time" class="block font-medium text-sm text-gray-700 mb-1">Startzeit *</label>
                <input type="time" id="start_time" name="start_time" required
                  class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:border-primary-500 transition-colors" />
              </div>

              <div>
                <label for="end_date" class="block font-medium text-sm text-gray-700 mb-1">Enddatum</label>
                <input type="date" id="end_date" name="end_date"
                  class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:border-primary-500 transition-colors" />
              </div>

              <div>
                <label for="end_time" class="block font-medium text-sm text-gray-700 mb-1">Endzeit</label>
                <input type="time" id="end_time" name="end_time"
                  class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:border-primary-500 transition-colors" />
              </div>
            </div>
          </div>

          <!-- Location -->
          <div class="bg-white rounded-2xl shadow-card p-6">
            <h2 class="font-semibold text-gray-900 mb-4">Ort</h2>
            
            <div class="space-y-4">
              <div>
                <label for="location_address" class="block font-medium text-sm text-gray-700 mb-1">Adresse</label>
                <input type="text" id="location_address" name="location_address" maxlength="300"
                  placeholder="Straße und Hausnummer, PLZ Stadt"
                  class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:border-primary-500 transition-colors" />
              </div>

              <div class="flex gap-4">
                <label class="flex items-center gap-2 cursor-pointer">
                  <input type="checkbox" id="is_indoor" name="is_indoor" class="w-5 h-5 accent-primary-500 rounded" />
                  <span class="text-gray-700">Indoor</span>
                </label>
                <label class="flex items-center gap-2 cursor-pointer">
                  <input type="checkbox" id="is_outdoor" name="is_outdoor" class="w-5 h-5 accent-primary-500 rounded" />
                  <span class="text-gray-700">Outdoor</span>
                </label>
              </div>
            </div>
          </div>

          <!-- Age & Price -->
          <div class="bg-white rounded-2xl shadow-card p-6">
            <h2 class="font-semibold text-gray-900 mb-4">Zielgruppe & Preis</h2>
            
            <div class="grid md:grid-cols-2 gap-4">
              <div>
                <label for="age_min" class="block font-medium text-sm text-gray-700 mb-1">Alter von</label>
                <input type="number" id="age_min" name="age_min" min="0" max="99"
                  placeholder="z.B. 3"
                  class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:border-primary-500 transition-colors" />
              </div>

              <div>
                <label for="age_max" class="block font-medium text-sm text-gray-700 mb-1">Alter bis</label>
                <input type="number" id="age_max" name="age_max" min="0" max="99"
                  placeholder="z.B. 12"
                  class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:border-primary-500 transition-colors" />
              </div>
            </div>

            <div class="mt-4">
              <label for="price_type" class="block font-medium text-sm text-gray-700 mb-1">Preistyp</label>
              <select id="price_type" name="price_type"
                class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:border-primary-500 transition-colors">
                <option value="unknown">Keine Angabe</option>
                <option value="free">Kostenlos</option>
                <option value="paid">Kostenpflichtig</option>
                <option value="range">Preisspanne</option>
              </select>
            </div>

            <div id="price-fields" class="hidden mt-4 grid md:grid-cols-2 gap-4">
              <div>
                <label for="price_min" class="block font-medium text-sm text-gray-700 mb-1">Preis ab (EUR)</label>
                <input type="number" id="price_min" name="price_min" min="0" step="0.01"
                  placeholder="0.00"
                  class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:border-primary-500 transition-colors" />
              </div>
              <div>
                <label for="price_max" class="block font-medium text-sm text-gray-700 mb-1">Preis bis (EUR)</label>
                <input type="number" id="price_max" name="price_max" min="0" step="0.01"
                  placeholder="0.00"
                  class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:border-primary-500 transition-colors" />
              </div>
            </div>
          </div>

          <!-- Contact & Booking -->
          <div class="bg-white rounded-2xl shadow-card p-6">
            <h2 class="font-semibold text-gray-900 mb-4">Kontakt & Buchung</h2>
            
            <div class="space-y-4">
              <div>
                <label for="booking_url" class="block font-medium text-sm text-gray-700 mb-1">Buchungs-/Anmelde-Link</label>
                <input type="url" id="booking_url" name="booking_url"
                  placeholder="https://..."
                  class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:border-primary-500 transition-colors" />
              </div>

              <div class="grid md:grid-cols-2 gap-4">
                <div>
                  <label for="contact_email" class="block font-medium text-sm text-gray-700 mb-1">Kontakt E-Mail</label>
                  <input type="email" id="contact_email" name="contact_email"
                    placeholder="kontakt@beispiel.de"
                    class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:border-primary-500 transition-colors" />
                </div>
                <div>
                  <label for="contact_phone" class="block font-medium text-sm text-gray-700 mb-1">Kontakt Telefon</label>
                  <input type="tel" id="contact_phone" name="contact_phone"
                    placeholder="+49 721 ..."
                    class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:border-primary-500 transition-colors" />
                </div>
              </div>
            </div>
          </div>

          <!-- Categories -->
          <div class="bg-white rounded-2xl shadow-card p-6">
            <h2 class="font-semibold text-gray-900 mb-4">Kategorien</h2>
            <p class="text-sm text-gray-500 mb-4">Wähle passende Kategorien für dein Event</p>
            
            <div id="categories-container" class="grid grid-cols-2 md:grid-cols-3 gap-2">
              <!-- Categories will be loaded here -->
            </div>
          </div>

          <!-- Messages -->
          <div id="form-error" class="hidden rounded-xl bg-red-50 text-red-700 px-4 py-3 text-sm"></div>
          <div id="form-success" class="hidden rounded-xl bg-green-50 text-green-700 px-4 py-3 text-sm"></div>

          <!-- Submit -->
          <div class="flex gap-4">
            <a href="/anbieter/dashboard" class="btn-secondary flex-1 py-3 text-center">Abbrechen</a>
            <button type="submit" id="submit-btn" class="btn-primary flex-1 py-3">Event erstellen</button>
          </div>
        </form>
      </div>
    </div>
  </main>
</BaseLayout>

<script is:inline define:vars={{ API_BASE }}>
  async function init() {
    const loadingState = document.getElementById('loading-state');
    const authRequired = document.getElementById('auth-required');
    const notVerified = document.getElementById('not-verified-warning');
    const formContainer = document.getElementById('event-form-container');

    const token = localStorage.getItem('auth_token');
    
    if (!token) {
      loadingState?.classList.add('hidden');
      authRequired?.classList.remove('hidden');
      return;
    }

    try {
      // Get provider profile
      const providerResponse = await fetch(`${API_BASE}/api/providers/me`, {
        headers: { 'Authorization': `Bearer ${token}` }
      });

      if (!providerResponse.ok) {
        loadingState?.classList.add('hidden');
        authRequired?.classList.remove('hidden');
        return;
      }

      const providerData = await providerResponse.json();
      
      if (!providerData.data) {
        // No provider profile
        loadingState?.classList.add('hidden');
        authRequired?.classList.remove('hidden');
        return;
      }

      if (!providerData.data.is_verified) {
        loadingState?.classList.add('hidden');
        notVerified?.classList.remove('hidden');
        return;
      }

      // Load categories
      const categoriesResponse = await fetch(`${API_BASE}/api/categories`);
      if (categoriesResponse.ok) {
        const categoriesData = await categoriesResponse.json();
        renderCategories(categoriesData.data || []);
      }

      // Show form
      loadingState?.classList.add('hidden');
      formContainer?.classList.remove('hidden');

      // Set default date to tomorrow
      const tomorrow = new Date();
      tomorrow.setDate(tomorrow.getDate() + 1);
      const dateInput = document.getElementById('start_date');
      if (dateInput) {
        dateInput.value = tomorrow.toISOString().split('T')[0];
      }

    } catch (error) {
      loadingState?.classList.add('hidden');
      authRequired?.classList.remove('hidden');
    }
  }

  function renderCategories(categories) {
    const container = document.getElementById('categories-container');
    if (!container) return;

    container.innerHTML = categories.map(cat => `
      <label class="flex items-center gap-2 cursor-pointer p-2 rounded-lg hover:bg-gray-50">
        <input type="checkbox" name="categories" value="${cat.slug}" class="w-4 h-4 accent-primary-500 rounded" />
        <span class="text-sm text-gray-700">${cat.icon || ''} ${cat.name_de}</span>
      </label>
    `).join('');
  }

  // Price type toggle
  document.getElementById('price_type')?.addEventListener('change', (e) => {
    const priceFields = document.getElementById('price-fields');
    const value = e.target.value;
    if (value === 'paid' || value === 'range') {
      priceFields?.classList.remove('hidden');
    } else {
      priceFields?.classList.add('hidden');
    }
  });

  // Form submission
  document.getElementById('event-form')?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const errorEl = document.getElementById('form-error');
    const successEl = document.getElementById('form-success');
    const submitBtn = document.getElementById('submit-btn');
    
    errorEl?.classList.add('hidden');
    successEl?.classList.add('hidden');
    submitBtn.disabled = true;
    submitBtn.textContent = 'Wird erstellt...';

    const token = localStorage.getItem('auth_token');
    const form = e.target;
    
    // Collect form data
    const startDate = form.start_date.value;
    const startTime = form.start_time.value;
    const endDate = form.end_date.value || startDate;
    const endTime = form.end_time.value;

    const eventData = {
      title: form.title.value,
      description_short: form.description_short.value || undefined,
      description_long: form.description_long.value || undefined,
      start_datetime: `${startDate}T${startTime}:00`,
      end_datetime: endTime ? `${endDate}T${endTime}:00` : undefined,
      location_address: form.location_address.value || undefined,
      is_indoor: form.is_indoor.checked,
      is_outdoor: form.is_outdoor.checked,
      age_min: form.age_min.value ? parseInt(form.age_min.value) : undefined,
      age_max: form.age_max.value ? parseInt(form.age_max.value) : undefined,
      price_type: form.price_type.value,
      price_min: form.price_min.value ? parseFloat(form.price_min.value) : undefined,
      price_max: form.price_max.value ? parseFloat(form.price_max.value) : undefined,
      booking_url: form.booking_url.value || undefined,
      contact_email: form.contact_email.value || undefined,
      contact_phone: form.contact_phone.value || undefined,
      categories: Array.from(form.querySelectorAll('input[name="categories"]:checked')).map(cb => cb.value),
    };

    try {
      const response = await fetch(`${API_BASE}/api/events`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'Authorization': `Bearer ${token}`
        },
        body: JSON.stringify(eventData)
      });

      const data = await response.json();

      if (response.ok) {
        successEl.textContent = 'Event wurde erstellt! Du wirst weitergeleitet...';
        successEl?.classList.remove('hidden');
        
        setTimeout(() => {
          window.location.href = '/anbieter/events';
        }, 1500);
      } else {
        const errorMessages = {
          'PROVIDER_NOT_VERIFIED': 'Dein Anbieter-Profil ist noch nicht verifiziert.',
          'PROVIDER_REQUIRED': 'Du benötigst ein Anbieter-Profil, um Events zu erstellen.',
          'VALIDATION_ERROR': data.error?.message || 'Bitte überprüfe deine Eingaben.'
        };
        
        errorEl.textContent = errorMessages[data.error?.code] || data.error?.message || 'Ein Fehler ist aufgetreten.';
        errorEl?.classList.remove('hidden');
      }
    } catch (error) {
      errorEl.textContent = 'Verbindungsfehler. Bitte versuche es später erneut.';
      errorEl?.classList.remove('hidden');
    } finally {
      submitBtn.disabled = false;
      submitBtn.textContent = 'Event erstellen';
    }
  });

  // Initialize
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', init);
  } else {
    init();
  }
</script>
