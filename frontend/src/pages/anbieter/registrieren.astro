---
import BaseLayout from '../../layouts/BaseLayout.astro';
import StickyHeader from '../../components/layout/StickyHeader.astro';
const API_BASE = import.meta.env.PUBLIC_API_URL || 'http://localhost:4000';
---

<BaseLayout title="Anbieter registrieren - kiezling">
  <StickyHeader />
  <main class="min-h-screen bg-gray-50 py-8 px-4">
    <div class="max-w-2xl mx-auto">
      <!-- Header -->
      <div class="text-center mb-8">
        <a href="/anbieter" class="text-primary-500 hover:text-primary-600 text-sm font-medium mb-4 inline-flex items-center gap-1">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
          Zur√ºck zur √úbersicht
        </a>
        <h1 class="text-3xl font-bold text-gray-900 mt-4">Als Anbieter registrieren</h1>
        <p class="text-gray-500 mt-2">Erstelle dein Konto und beginne, deine Angebote zu pr√§sentieren</p>
      </div>

      <!-- Registration Form -->
      <div class="bg-white rounded-2xl shadow-card p-6 md:p-8">
        <form class="space-y-6" id="register-form">
          <!-- Step Indicator -->
          <div class="flex items-center justify-center gap-3 mb-8">
            <div class="flex items-center gap-2">
              <div class="w-8 h-8 rounded-full bg-primary-500 text-white flex items-center justify-center text-sm font-bold" id="step1-indicator">1</div>
              <span class="text-sm font-medium text-gray-900">Kontodaten</span>
            </div>
            <div class="w-8 h-px bg-gray-300"></div>
            <div class="flex items-center gap-2">
              <div class="w-8 h-8 rounded-full bg-gray-200 text-gray-500 flex items-center justify-center text-sm font-bold" id="step2-indicator">2</div>
              <span class="text-sm font-medium text-gray-400" id="step2-label">Anbieter-Info</span>
            </div>
          </div>

          <!-- Step 1: Account Details -->
          <div id="step1" class="space-y-5">
            <div class="flex flex-col gap-2">
              <label for="email" class="font-medium text-sm text-gray-700">E-Mail-Adresse *</label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                required 
                placeholder="kontakt@mein-unternehmen.de" 
                autocomplete="email"
                class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:border-primary-500 transition-colors" 
              />
            </div>

            <div class="flex flex-col gap-2">
              <label for="password" class="font-medium text-sm text-gray-700">Passwort *</label>
              <input 
                type="password" 
                id="password" 
                name="password" 
                required 
                minlength="8"
                placeholder="Mindestens 8 Zeichen" 
                autocomplete="new-password"
                class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:border-primary-500 transition-colors" 
              />
            </div>

            <div class="flex flex-col gap-2">
              <label for="password-confirm" class="font-medium text-sm text-gray-700">Passwort best√§tigen *</label>
              <input 
                type="password" 
                id="password-confirm" 
                name="password-confirm" 
                required 
                minlength="8"
                placeholder="Passwort wiederholen" 
                autocomplete="new-password"
                class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:border-primary-500 transition-colors" 
              />
            </div>

            <button type="button" id="next-step" class="btn-primary w-full py-3">
              Weiter
            </button>
          </div>

          <!-- Step 2: Provider Info -->
          <div id="step2" class="space-y-5 hidden">
            <div class="flex flex-col gap-2">
              <label for="company-name" class="font-medium text-sm text-gray-700">Name des Unternehmens / Vereins *</label>
              <input 
                type="text" 
                id="company-name" 
                name="company_name" 
                required 
                placeholder="z.B. Musikschule Karlsruhe e.V." 
                class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:border-primary-500 transition-colors" 
              />
            </div>

            <div class="flex flex-col gap-2">
              <label for="provider-type" class="font-medium text-sm text-gray-700">Art des Anbieters *</label>
              <select 
                id="provider-type" 
                name="type" 
                required
                class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:border-primary-500 transition-colors bg-white"
              >
                <option value="">Bitte w√§hlen</option>
                <option value="verein">Verein</option>
                <option value="unternehmen">Unternehmen</option>
                <option value="kommune">Kommune / Stadt</option>
                <option value="kita">Kita / Schule</option>
                <option value="freiberuflich">Freiberuflich</option>
                <option value="sonstiges">Sonstiges</option>
              </select>
            </div>

            <div class="flex flex-col gap-2">
              <label for="website" class="font-medium text-sm text-gray-700">Website (optional)</label>
              <input 
                type="url" 
                id="website" 
                name="website" 
                placeholder="https://www.mein-unternehmen.de" 
                class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:border-primary-500 transition-colors" 
              />
            </div>

            <div class="flex flex-col gap-2">
              <label for="phone" class="font-medium text-sm text-gray-700">Telefon (optional)</label>
              <input 
                type="tel" 
                id="phone" 
                name="phone" 
                placeholder="+49 721 ..." 
                class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:border-primary-500 transition-colors" 
              />
            </div>

            <div class="flex flex-col gap-2">
              <label for="address" class="font-medium text-sm text-gray-700">Adresse (optional)</label>
              <input 
                type="text" 
                id="address" 
                name="address" 
                placeholder="Stra√üe, PLZ Ort" 
                class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:border-primary-500 transition-colors" 
              />
            </div>

            <!-- Terms -->
            <div class="bg-gray-50 rounded-xl p-4">
              <label class="flex items-start gap-3 cursor-pointer">
                <input type="checkbox" id="terms" name="terms" required class="mt-1 accent-primary-500 rounded" />
                <span class="text-sm text-gray-700">
                  Ich habe die <a href="/agb" target="_blank" class="text-primary-500 hover:text-primary-600 underline">AGB</a> und 
                  <a href="/datenschutz" target="_blank" class="text-primary-500 hover:text-primary-600 underline">Datenschutzerkl√§rung</a> gelesen und akzeptiere diese. *
                </span>
              </label>
            </div>

            <div class="flex gap-3">
              <button type="button" id="prev-step" class="flex-1 py-3 border-2 border-gray-200 rounded-xl text-gray-700 font-medium hover:bg-gray-50 transition-colors">
                Zur√ºck
              </button>
              <button type="submit" id="submit-btn" class="flex-1 btn-primary py-3">
                Registrieren
              </button>
            </div>
          </div>

          <!-- Error Message -->
          <div class="hidden rounded-xl bg-red-50 text-red-700 px-4 py-3 text-sm text-center" id="error-message">
            Ein Fehler ist aufgetreten
          </div>
        </form>

        <!-- Login Link -->
        <div class="text-center mt-6 pt-6 border-t border-gray-100">
          <p class="text-gray-600 text-sm">
            Bereits registriert? 
            <a href="/anbieter/login" class="text-primary-500 hover:text-primary-600 font-semibold">Anmelden</a>
          </p>
        </div>
      </div>

      <!-- Benefits Reminder -->
      <div class="mt-8 grid grid-cols-3 gap-4 text-center">
        <div>
          <div class="text-2xl mb-1">‚úì</div>
          <div class="text-sm text-gray-600">Kostenlos starten</div>
        </div>
        <div>
          <div class="text-2xl mb-1">üë®‚Äçüë©‚Äçüëß‚Äçüë¶</div>
          <div class="text-sm text-gray-600">Familien erreichen</div>
        </div>
        <div>
          <div class="text-2xl mb-1">üìä</div>
          <div class="text-sm text-gray-600">Statistiken & Insights</div>
        </div>
      </div>
    </div>
  </main>
</BaseLayout>

<script is:inline define:vars={{ API_BASE }}>
  const form = document.getElementById('register-form');
  const step1 = document.getElementById('step1');
  const step2 = document.getElementById('step2');
  const nextStepBtn = document.getElementById('next-step');
  const prevStepBtn = document.getElementById('prev-step');
  const submitBtn = document.getElementById('submit-btn');
  const errorMessage = document.getElementById('error-message');
  const step1Indicator = document.getElementById('step1-indicator');
  const step2Indicator = document.getElementById('step2-indicator');
  const step2Label = document.getElementById('step2-label');

  // Step navigation
  nextStepBtn?.addEventListener('click', () => {
    const email = document.getElementById('email')?.value;
    const password = document.getElementById('password')?.value;
    const passwordConfirm = document.getElementById('password-confirm')?.value;

    // Validate step 1
    if (!email || !password || !passwordConfirm) {
      showError('Bitte f√ºlle alle Pflichtfelder aus.');
      return;
    }

    if (password.length < 8) {
      showError('Das Passwort muss mindestens 8 Zeichen lang sein.');
      return;
    }

    if (password !== passwordConfirm) {
      showError('Die Passw√∂rter stimmen nicht √ºberein.');
      return;
    }

    // Show step 2
    hideError();
    step1?.classList.add('hidden');
    step2?.classList.remove('hidden');
    
    // Update indicators
    step1Indicator?.classList.remove('bg-primary-500', 'text-white');
    step1Indicator?.classList.add('bg-green-500', 'text-white');
    step1Indicator.textContent = '‚úì';
    step2Indicator?.classList.remove('bg-gray-200', 'text-gray-500');
    step2Indicator?.classList.add('bg-primary-500', 'text-white');
    step2Label?.classList.remove('text-gray-400');
    step2Label?.classList.add('text-gray-900');
  });

  prevStepBtn?.addEventListener('click', () => {
    hideError();
    step2?.classList.add('hidden');
    step1?.classList.remove('hidden');
    
    // Reset indicators
    step1Indicator?.classList.add('bg-primary-500', 'text-white');
    step1Indicator?.classList.remove('bg-green-500');
    step1Indicator.textContent = '1';
    step2Indicator?.classList.add('bg-gray-200', 'text-gray-500');
    step2Indicator?.classList.remove('bg-primary-500', 'text-white');
    step2Label?.classList.add('text-gray-400');
    step2Label?.classList.remove('text-gray-900');
  });

  function showError(message) {
    if (errorMessage) {
      errorMessage.textContent = message;
      errorMessage.classList.remove('hidden');
    }
  }

  function hideError() {
    errorMessage?.classList.add('hidden');
  }

  // Form submission
  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    hideError();

    const email = document.getElementById('email')?.value;
    const password = document.getElementById('password')?.value;
    const companyName = document.getElementById('company-name')?.value;
    const providerType = document.getElementById('provider-type')?.value;
    const website = document.getElementById('website')?.value;
    const phone = document.getElementById('phone')?.value;
    const address = document.getElementById('address')?.value;
    const terms = document.getElementById('terms')?.checked;

    if (!terms) {
      showError('Bitte akzeptiere die AGB und Datenschutzerkl√§rung.');
      return;
    }

    if (!companyName || !providerType) {
      showError('Bitte f√ºlle alle Pflichtfelder aus.');
      return;
    }

    submitBtn.disabled = true;
    submitBtn.textContent = 'Wird registriert...';

    try {
      // 1. Register user account
      const registerResponse = await fetch(`${API_BASE}/api/auth/register`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ email, password }),
      });

      const registerData = await registerResponse.json();

      if (!registerResponse.ok) {
        throw new Error(registerData.error?.message || 'Registrierung fehlgeschlagen');
      }

      const token = registerData.data.token;

      // 2. Create provider profile
      const providerResponse = await fetch(`${API_BASE}/api/providers`, {
        method: 'POST',
        headers: { 
          'Content-Type': 'application/json',
          'Authorization': `Bearer ${token}`
        },
        body: JSON.stringify({
          name: companyName,
          type: providerType,
          website: website || null,
          phone: phone || null,
          address: address || null,
        }),
      });

      const providerData = await providerResponse.json();

      if (!providerResponse.ok) {
        // Provider creation failed, but user is created
        console.error('Provider creation failed:', providerData);
      }

      // 3. Store token and redirect
      localStorage.setItem('auth_token', token);
      window.location.href = '/anbieter/dashboard';

    } catch (error) {
      showError(error.message || 'Ein Fehler ist aufgetreten. Bitte versuche es erneut.');
      submitBtn.disabled = false;
      submitBtn.textContent = 'Registrieren';
    }
  });
</script>
