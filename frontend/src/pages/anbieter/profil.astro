---
import BaseLayout from '../../layouts/BaseLayout.astro';
import StickyHeader from '../../components/layout/StickyHeader.astro';
const API_BASE = import.meta.env.PUBLIC_API_URL || 'http://localhost:4000';
---

<BaseLayout title="Profil bearbeiten - kiezling Anbieter">
  <StickyHeader />
  <main class="min-h-screen bg-gray-50 py-8 px-4">
    <div class="max-w-2xl mx-auto">
      <!-- Loading State -->
      <div id="loading-state" class="flex items-center justify-center min-h-[40vh]">
        <div class="text-center">
          <div class="w-12 h-12 border-4 border-primary-500 border-t-transparent rounded-full animate-spin mx-auto mb-4"></div>
          <p class="text-gray-500">Profil wird geladen...</p>
        </div>
      </div>

      <!-- Auth Required -->
      <div id="auth-required" class="hidden">
        <div class="bg-white rounded-2xl shadow-card p-8 text-center">
          <h1 class="text-xl font-bold text-gray-900 mb-2">Anmeldung erforderlich</h1>
          <p class="text-gray-500 mb-6">Bitte melde dich als Anbieter an.</p>
          <a href="/anbieter/login" class="btn-primary inline-block px-6 py-3">Zur Anmeldung</a>
        </div>
      </div>

      <!-- Profile Form -->
      <div id="profile-content" class="hidden">
        <div class="mb-6">
          <a href="/anbieter/dashboard" class="text-gray-500 hover:text-gray-700 text-sm mb-2 inline-flex items-center gap-1">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
            Dashboard
          </a>
          <h1 class="text-2xl font-bold text-gray-900">Anbieter-Profil bearbeiten</h1>
        </div>

        <!-- Verification Status -->
        <div id="verification-status" class="hidden mb-6">
          <div id="verified-banner" class="hidden bg-green-50 border border-green-200 rounded-xl p-4">
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <span class="text-green-700 font-medium">Verifiziert</span>
            </div>
            <p class="text-sm text-green-600 mt-1">Dein Anbieter-Profil ist verifiziert. Du kannst Events erstellen.</p>
          </div>
          <div id="pending-banner" class="hidden bg-yellow-50 border border-yellow-200 rounded-xl p-4">
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <span class="text-yellow-700 font-medium">Verifizierung ausstehend</span>
            </div>
            <p class="text-sm text-yellow-600 mt-1">Dein Profil wird geprüft. Dies kann 1-2 Werktage dauern.</p>
          </div>
        </div>

        <form id="profile-form" class="space-y-6">
          <!-- Basic Info -->
          <div class="bg-white rounded-2xl shadow-card p-6">
            <h2 class="font-semibold text-gray-900 mb-4">Unternehmensinformationen</h2>
            
            <div class="space-y-4">
              <div>
                <label for="name" class="block font-medium text-sm text-gray-700 mb-1">Name / Organisation *</label>
                <input type="text" id="name" name="name" required maxlength="200"
                  placeholder="z.B. Kinderkunsthaus Karlsruhe e.V."
                  class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:border-primary-500 transition-colors" />
              </div>

              <div>
                <label for="type" class="block font-medium text-sm text-gray-700 mb-1">Art des Anbieters</label>
                <select id="type" name="type" disabled
                  class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl bg-gray-50 text-gray-500">
                  <option value="verein">Verein</option>
                  <option value="unternehmen">Unternehmen</option>
                  <option value="kommune">Kommune</option>
                  <option value="kita">Kita</option>
                  <option value="freiberuflich">Freiberuflich</option>
                  <option value="sonstiges">Sonstiges</option>
                </select>
                <p class="text-xs text-gray-500 mt-1">Der Typ kann nach der Registrierung nicht geändert werden.</p>
              </div>

              <div>
                <label for="description" class="block font-medium text-sm text-gray-700 mb-1">Beschreibung</label>
                <textarea id="description" name="description" rows="4" maxlength="2000"
                  placeholder="Beschreibe deine Organisation und was ihr für Familien anbietet..."
                  class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:border-primary-500 transition-colors"></textarea>
              </div>
            </div>
          </div>

          <!-- Contact Info -->
          <div class="bg-white rounded-2xl shadow-card p-6">
            <h2 class="font-semibold text-gray-900 mb-4">Kontaktdaten</h2>
            
            <div class="space-y-4">
              <div>
                <label for="website" class="block font-medium text-sm text-gray-700 mb-1">Website</label>
                <input type="url" id="website" name="website"
                  placeholder="https://..."
                  class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:border-primary-500 transition-colors" />
              </div>

              <div class="grid md:grid-cols-2 gap-4">
                <div>
                  <label for="email" class="block font-medium text-sm text-gray-700 mb-1">E-Mail</label>
                  <input type="email" id="email" name="email"
                    placeholder="kontakt@beispiel.de"
                    class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:border-primary-500 transition-colors" />
                </div>
                <div>
                  <label for="phone" class="block font-medium text-sm text-gray-700 mb-1">Telefon</label>
                  <input type="tel" id="phone" name="phone"
                    placeholder="+49 721 ..."
                    class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:border-primary-500 transition-colors" />
                </div>
              </div>

              <div>
                <label for="address" class="block font-medium text-sm text-gray-700 mb-1">Adresse</label>
                <input type="text" id="address" name="address" maxlength="300"
                  placeholder="Straße, PLZ Stadt"
                  class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:border-primary-500 transition-colors" />
              </div>
            </div>
          </div>

          <!-- Messages -->
          <div id="form-error" class="hidden rounded-xl bg-red-50 text-red-700 px-4 py-3 text-sm"></div>
          <div id="form-success" class="hidden rounded-xl bg-green-50 text-green-700 px-4 py-3 text-sm"></div>

          <!-- Submit -->
          <div class="flex gap-4">
            <a href="/anbieter/dashboard" class="btn-secondary flex-1 py-3 text-center">Abbrechen</a>
            <button type="submit" id="submit-btn" class="btn-primary flex-1 py-3">Änderungen speichern</button>
          </div>
        </form>
      </div>
    </div>
  </main>
</BaseLayout>

<script define:vars={{ API_BASE }}>
  let providerData = null;

  async function init() {
    const loadingState = document.getElementById('loading-state');
    const authRequired = document.getElementById('auth-required');
    const profileContent = document.getElementById('profile-content');

    const token = localStorage.getItem('auth_token');
    
    if (!token) {
      loadingState?.classList.add('hidden');
      authRequired?.classList.remove('hidden');
      return;
    }

    try {
      const response = await fetch(`${API_BASE}/api/providers/me`, {
        headers: { 'Authorization': `Bearer ${token}` }
      });

      if (!response.ok) {
        loadingState?.classList.add('hidden');
        authRequired?.classList.remove('hidden');
        return;
      }

      const data = await response.json();
      providerData = data.data;

      if (!providerData) {
        loadingState?.classList.add('hidden');
        authRequired?.classList.remove('hidden');
        return;
      }

      populateForm(providerData);
      updateVerificationStatus(providerData.is_verified);

      loadingState?.classList.add('hidden');
      profileContent?.classList.remove('hidden');

    } catch (error) {
      loadingState?.classList.add('hidden');
      authRequired?.classList.remove('hidden');
    }
  }

  function populateForm(provider) {
    const form = document.getElementById('profile-form');
    if (!form || !provider) return;

    form.name.value = provider.name || '';
    form.type.value = provider.type || 'sonstiges';
    form.description.value = provider.description || '';
    form.website.value = provider.website || '';
    form.email.value = provider.email || '';
    form.phone.value = provider.phone || '';
    form.address.value = provider.address || '';
  }

  function updateVerificationStatus(isVerified) {
    const statusContainer = document.getElementById('verification-status');
    const verifiedBanner = document.getElementById('verified-banner');
    const pendingBanner = document.getElementById('pending-banner');

    statusContainer?.classList.remove('hidden');
    
    if (isVerified) {
      verifiedBanner?.classList.remove('hidden');
      pendingBanner?.classList.add('hidden');
    } else {
      verifiedBanner?.classList.add('hidden');
      pendingBanner?.classList.remove('hidden');
    }
  }

  // Form submission
  document.getElementById('profile-form')?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const errorEl = document.getElementById('form-error');
    const successEl = document.getElementById('form-success');
    const submitBtn = document.getElementById('submit-btn');
    
    errorEl?.classList.add('hidden');
    successEl?.classList.add('hidden');
    submitBtn.disabled = true;
    submitBtn.textContent = 'Wird gespeichert...';

    const token = localStorage.getItem('auth_token');
    const form = e.target;

    const updateData = {
      name: form.name.value,
      description: form.description.value || null,
      website: form.website.value || null,
      email: form.email.value || null,
      phone: form.phone.value || null,
      address: form.address.value || null,
    };

    try {
      const response = await fetch(`${API_BASE}/api/providers/me`, {
        method: 'PUT',
        headers: {
          'Content-Type': 'application/json',
          'Authorization': `Bearer ${token}`
        },
        body: JSON.stringify(updateData)
      });

      const data = await response.json();

      if (response.ok) {
        successEl.textContent = 'Profil wurde aktualisiert!';
        successEl?.classList.remove('hidden');
      } else {
        errorEl.textContent = data.error?.message || 'Ein Fehler ist aufgetreten.';
        errorEl?.classList.remove('hidden');
      }
    } catch (error) {
      errorEl.textContent = 'Verbindungsfehler. Bitte versuche es später erneut.';
      errorEl?.classList.remove('hidden');
    } finally {
      submitBtn.disabled = false;
      submitBtn.textContent = 'Änderungen speichern';
    }
  });

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', init);
  } else {
    init();
  }
</script>
