---
import BaseLayout from '../layouts/BaseLayout.astro';
import StickyHeader from '../components/layout/StickyHeader.astro';
---

<BaseLayout title="Passwort vergessen - kiezling">
  <StickyHeader />
  <main class="min-h-screen bg-gray-50 flex items-center justify-center py-8 px-4">
    <div class="w-full max-w-md">
      <div class="bg-white rounded-2xl shadow-card p-6 md:p-8">
        <!-- Header -->
        <div class="text-center mb-8">
          <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"></path>
            </svg>
          </div>
          <h1 class="text-2xl font-bold text-gray-900 mb-2">Passwort vergessen?</h1>
          <p class="text-gray-500">Kein Problem! Gib deine E-Mail-Adresse ein und wir senden dir einen Link zum Zurücksetzen.</p>
        </div>

        <!-- Request Form -->
        <form class="flex flex-col gap-5" id="reset-request-form">
          <div class="flex flex-col gap-2">
            <label for="email" class="font-medium text-sm text-gray-700">E-Mail-Adresse</label>
            <input 
              type="email" 
              id="email" 
              name="email" 
              required 
              placeholder="deine@email.de" 
              autocomplete="email"
              class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:border-primary-500 transition-colors" 
            />
          </div>
          
          <button type="submit" class="btn-primary w-full py-3" id="submit-btn">
            Link anfordern
          </button>
          
          <!-- Error Message -->
          <div class="hidden rounded-xl bg-red-50 text-red-700 px-4 py-3 text-sm text-center" id="error-message">
            Ein Fehler ist aufgetreten
          </div>
        </form>

        <!-- Success Message (initially hidden) -->
        <div class="hidden" id="success-message">
          <div class="text-center">
            <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
            </div>
            <h2 class="text-xl font-bold text-gray-900 mb-2">E-Mail gesendet!</h2>
            <p class="text-gray-500 mb-6">
              Falls ein Konto mit dieser E-Mail existiert, erhältst du in Kürze einen Link zum Zurücksetzen deines Passworts.
            </p>
            <p class="text-sm text-gray-400">
              Keine E-Mail erhalten? Prüfe deinen Spam-Ordner oder <button type="button" class="text-primary-500 hover:text-primary-600 underline" id="try-again-btn">versuche es erneut</button>.
            </p>
          </div>
        </div>

        <!-- Back to Login -->
        <div class="text-center mt-6 pt-6 border-t border-gray-100">
          <a href="/login" class="text-primary-500 hover:text-primary-600 font-medium inline-flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
            Zurück zur Anmeldung
          </a>
        </div>
      </div>

      <!-- Info Box -->
      <div class="mt-6 bg-blue-50 rounded-xl p-4 text-sm text-blue-700">
        <div class="flex gap-3">
          <svg class="w-5 h-5 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <p>
            Der Link zum Zurücksetzen ist aus Sicherheitsgründen nur 1 Stunde gültig. 
            Achte darauf, dass du Zugang zu deinem E-Mail-Postfach hast.
          </p>
        </div>
      </div>
    </div>
  </main>
</BaseLayout>

<script>
  import { resetPassword } from '../lib/supabase';

  const form = document.getElementById('reset-request-form') as HTMLFormElement;
  const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement;
  const errorMessage = document.getElementById('error-message');
  const successMessage = document.getElementById('success-message');
  const tryAgainBtn = document.getElementById('try-again-btn');

  if (form && submitBtn && errorMessage && successMessage && tryAgainBtn) {
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const emailInput = document.getElementById('email') as HTMLInputElement;
      const email = emailInput.value;
      
      // Reset states
      errorMessage.classList.add('hidden');
      submitBtn.disabled = true;
      submitBtn.textContent = 'Wird gesendet...';

      try {
        await resetPassword(email);
        
        // Show success regardless of whether email exists (security)
        form.classList.add('hidden');
        successMessage.classList.remove('hidden');
      } catch (error: any) {
        console.error('Password reset error:', error);
        
        // For security, still show success to not reveal if email exists
        // Only show error for actual technical failures
        if (error.message?.includes('rate limit')) {
          errorMessage.textContent = 'Zu viele Anfragen. Bitte warte einen Moment.';
          errorMessage.classList.remove('hidden');
          submitBtn.disabled = false;
          submitBtn.textContent = 'Link anfordern';
        } else {
          // Show success even on error (don't reveal if email exists)
          form.classList.add('hidden');
          successMessage.classList.remove('hidden');
        }
      }
    });

    tryAgainBtn.addEventListener('click', () => {
      form.classList.remove('hidden');
      successMessage.classList.add('hidden');
      submitBtn.disabled = false;
      submitBtn.textContent = 'Link anfordern';
      (document.getElementById('email') as HTMLInputElement).value = '';
    });
  }
</script>
