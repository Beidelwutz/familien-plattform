<script define:vars={{ API_BASE }}>
  const form = document.getElementById('login-form');
  const errorEl = document.getElementById('login-error');

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    if (errorEl) errorEl.classList.add('hidden');
    const formData = new FormData(form);
    const email = formData.get('email');
    const password = formData.get('password');
    try {
      const response = await fetch(`${API_BASE}/api/auth/login`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ email, password }),
      });
      const data = await response.json();
      if (data.success && data.data?.token) {
        const token = data.data.token;
        localStorage.setItem('auth_token', token);
        // Lokale Merkliste an Backend anbinden
        try {
          const localIds = JSON.parse(localStorage.getItem('saved_events') || '[]');
          const headers = { 'Content-Type': 'application/json', 'Authorization': `Bearer ${token}` };
          for (const eventId of localIds) {
            await fetch(`${API_BASE}/api/user/saved-events/${eventId}`, { method: 'POST', headers });
          }
        } catch (_) { /* Sync optional */ }
        const back = new URLSearchParams(window.location.search).get('redirect') || '/';
        window.location.href = back;
      } else {
        if (errorEl) errorEl.classList.remove('hidden');
      }
    } catch (err) {
      console.error('Login error:', err);
      if (errorEl) errorEl.classList.remove('hidden');
    }
  });
</script>
