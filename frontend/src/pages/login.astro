<script>
  import { supabase, signInWithGoogle, signInWithEmail, getSession } from '../lib/supabase';

  const form = document.getElementById('login-form') as HTMLFormElement;
  const errorEl = document.getElementById('login-error');
  const successEl = document.getElementById('login-success');
  const googleBtn = document.getElementById('google-login-btn');
  const emailBtn = document.getElementById('email-login-btn');

  // Check if user is already logged in
  async function checkExistingSession() {
    // Erst mal auf Supabase Auth State warten
    const { data: { session } } = await supabase.auth.getSession();

    if (session) {
      // WICHTIG: Token aus Supabase-Session holen und im localStorage setzen
      // Sonst entsteht eine Redirect-Schleife, da Admin-Seiten den Token erwarten
      if (session.access_token) {
        localStorage.setItem('auth_token', session.access_token);
      }
      const redirectTo = new URLSearchParams(window.location.search).get('redirect') || '/';
      window.location.href = redirectTo;
      return;
    }

    // Wenn keine Session, aber ein Token existiert, prÃ¼fen ob er gÃ¼ltig ist
    const existingToken = localStorage.getItem('auth_token');
    if (existingToken) {
      // Token existiert - versuche zu validieren durch Backend-Call
      try {
        const API_BASE = import.meta.env.PUBLIC_API_URL || 'http://localhost:4000';
        const res = await fetch(`${API_BASE}/api/auth/me`, {
          headers: { Authorization: `Bearer ${existingToken}` }
        });
        if (res.ok) {
          // Token ist gÃ¼ltig - weiterleiten
          const redirectTo = new URLSearchParams(window.location.search).get('redirect') || '/';
          window.location.href = redirectTo;
          return;
        } else {
          // Token ungÃ¼ltig - entfernen
          localStorage.removeItem('auth_token');
        }
      } catch {
        // Fehler - Token entfernen
        localStorage.removeItem('auth_token');
      }
    }
  }

  // Check for error in URL (from callback)
  function checkUrlError() {
    const urlParams = new URLSearchParams(window.location.search);
    const error = urlParams.get('error');
    if (error && errorEl) {
      errorEl.textContent = error === 'auth_failed' 
        ? 'Anmeldung fehlgeschlagen. Bitte versuche es erneut.'
        : error;
      errorEl.classList.remove('hidden');
    }
  }

  // Show error message
  function showError(message: string) {
    if (errorEl) {
      errorEl.textContent = message;
      errorEl.classList.remove('hidden');
    }
    if (successEl) successEl.classList.add('hidden');
  }

  // Show success message
  function showSuccess(message: string) {
    if (successEl) {
      successEl.textContent = message;
      successEl.classList.remove('hidden');
    }
    if (errorEl) errorEl.classList.add('hidden');
  }

  // Set button loading state
  function setLoading(btn: HTMLElement | null, loading: boolean) {
    if (!btn) return;
    if (loading) {
      btn.setAttribute('disabled', 'true');
      btn.classList.add('opacity-60', 'cursor-not-allowed');
    } else {
      btn.removeAttribute('disabled');
      btn.classList.remove('opacity-60', 'cursor-not-allowed');
    }
  }

  // Google Login Handler
  googleBtn?.addEventListener('click', async () => {
    try {
      setLoading(googleBtn, true);
      if (errorEl) errorEl.classList.add('hidden');
      
      // Store redirect URL for callback
      const redirectTo = new URLSearchParams(window.location.search).get('redirect') || '/';
      localStorage.setItem('auth_redirect', redirectTo);
      
      await signInWithGoogle();
      // User will be redirected to Google, then to /auth/callback
    } catch (err) {
      console.error('Google login error:', err);
      showError('Google-Anmeldung fehlgeschlagen. Bitte versuche es erneut.');
      setLoading(googleBtn, false);
    }
  });

  // Email Login Handler
  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    if (errorEl) errorEl.classList.add('hidden');
    setLoading(emailBtn, true);

    const formData = new FormData(form);
    const email = formData.get('email') as string;
    const password = formData.get('password') as string;

    try {
      const { session, user } = await signInWithEmail(email, password);

      if (session && user) {
        showSuccess('Anmeldung erfolgreich! Du wirst weitergeleitet...');
        
        // Store access token for API calls (backward compatibility)
        localStorage.setItem('auth_token', session.access_token);
        
        // Sync local saved events to backend
        try {
          const localIds = JSON.parse(localStorage.getItem('saved_events') || '[]');
          const headers = { 
            'Content-Type': 'application/json', 
            'Authorization': `Bearer ${session.access_token}` 
          };
          const API_BASE = import.meta.env.PUBLIC_API_URL || 'http://localhost:4000';
          for (const eventId of localIds) {
            await fetch(`${API_BASE}/api/user/saved-events/${eventId}`, { method: 'POST', headers });
          }
        } catch (_) { /* Sync optional */ }

        // Redirect
        const redirectTo = new URLSearchParams(window.location.search).get('redirect') || '/';
        setTimeout(() => {
          window.location.href = redirectTo;
        }, 500);
      } else {
        showError('Anmeldung fehlgeschlagen. Bitte Ã¼berprÃ¼fe deine Zugangsdaten.');
        setLoading(emailBtn, false);
      }
    } catch (err: any) {
      console.error('Login error:', err);
      
      // Handle specific Supabase errors
      if (err.message?.includes('Invalid login credentials')) {
        showError('E-Mail oder Passwort falsch.');
      } else if (err.message?.includes('Email not confirmed')) {
        showError('Bitte bestÃ¤tige zuerst deine E-Mail-Adresse.');
      } else {
        showError(err.message || 'Ein Fehler ist aufgetreten. Bitte versuche es erneut.');
      }
      setLoading(emailBtn, false);
    }
  });

  // Initialize
  checkExistingSession();
  checkUrlError();
</script>
