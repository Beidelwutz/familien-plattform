            <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
            <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
            <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
          </svg>
          Mit Google anmelden
        </button>

        <div class="flex items-center gap-4 mb-6">
          <span class="flex-1 h-px bg-gray-200"></span>
          <span class="text-gray-400 text-sm">oder mit E-Mail</span>
          <span class="flex-1 h-px bg-gray-200"></span>
        </div>

        <form class="flex flex-col gap-5" id="login-form">
          <div class="flex flex-col gap-2">
            <label for="email" class="font-medium text-sm text-gray-700">E-Mail</label>
            <input type="email" id="email" name="email" required placeholder="deine@email.de" autocomplete="email"
              class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:border-primary-500 transition-colors" />
          </div>
          <div class="flex flex-col gap-2">
            <label for="password" class="font-medium text-sm text-gray-700">Passwort</label>
            <input type="password" id="password" name="password" required placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢" autocomplete="current-password"
              class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:border-primary-500 transition-colors" />
          </div>
          <div class="flex justify-between items-center text-sm">
            <label class="flex items-center gap-2 cursor-pointer text-gray-600">
              <input type="checkbox" id="remember-checkbox" name="remember" class="accent-primary-500 rounded" />
              <span>Angemeldet bleiben</span>
            </label>
            <a href="/passwort-vergessen" class="text-primary-500 hover:text-primary-600 font-medium">Passwort vergessen?</a>
          </div>
          <button type="submit" id="email-login-btn" class="btn-primary w-full py-3 mt-2">Anmelden</button>
          <div class="hidden rounded-xl bg-red-50 text-red-700 px-4 py-3 text-sm text-center" id="login-error"></div>
          <div class="hidden rounded-xl bg-green-50 text-green-700 px-4 py-3 text-sm text-center" id="login-success"></div>
          <!-- Rate limit countdown -->
          <div class="hidden rounded-xl bg-yellow-50 text-yellow-700 px-4 py-3 text-sm text-center" id="rate-limit-warning">
            <p>Zu viele Anmeldeversuche. Bitte warte <span id="rate-limit-countdown">0</span> Sekunden.</p>
          </div>
        </form>

        <p class="text-center text-sm text-gray-600 mt-6">
          Noch kein Konto? <a href="/registrieren" class="text-primary-500 hover:text-primary-600 font-semibold">Jetzt registrieren</a>
        </p>
      </div>

      <div class="p-4">
        <h2 class="text-lg font-bold text-gray-900 mb-4">Warum registrieren?</h2>
        <ul class="space-y-4">
          <li class="flex gap-4 items-start">
            <span class="text-2xl">‚ù§Ô∏è</span>
            <div>
              <strong class="block text-gray-900">Merkliste</strong>
              <p class="text-sm text-gray-500 mt-0.5">Speichere interessante Events f√ºr sp√§ter</p>
            </div>
          </li>
          <li class="flex gap-4 items-start">
            <span class="text-2xl">üìã</span>
            <div>
              <strong class="block text-gray-900">Gespeicherte Pl√§ne</strong>
              <p class="text-sm text-gray-500 mt-0.5">Greife jederzeit auf deine Familienpl√§ne zu</p>
            </div>
          </li>
          <li class="flex gap-4 items-start">
            <span class="text-2xl">üë®‚Äçüë©‚Äçüëß‚Äçüë¶</span>
            <div>
              <strong class="block text-gray-900">Familienprofil</strong>
              <p class="text-sm text-gray-500 mt-0.5">Personalisierte Empfehlungen f√ºr deine Kinder</p>
            </div>
          </li>
          <li class="flex gap-4 items-start">
            <span class="text-2xl">üìÖ</span>
            <div>
              <strong class="block text-gray-900">Kalender-Sync</strong>
              <p class="text-sm text-gray-500 mt-0.5">Exportiere Events direkt in deinen Kalender</p>
            </div>
          </li>
        </ul>
      </div>
    </div>
  </main>
</BaseLayout>

<script>
  import { supabase, signInWithGoogle, signInWithEmail, isSupabaseConfigured } from '../lib/supabase';
  import { getApiBase } from '../lib/apiBase';

  const API_BASE = getApiBase();

  const form = document.getElementById('login-form') as HTMLFormElement;
  const errorEl = document.getElementById('login-error');
  const successEl = document.getElementById('login-success');
  const googleBtn = document.getElementById('google-login-btn');
  const emailBtn = document.getElementById('email-login-btn');
  const rememberCheckbox = document.getElementById('remember-checkbox') as HTMLInputElement;
  const rateLimitWarning = document.getElementById('rate-limit-warning');
  const rateLimitCountdown = document.getElementById('rate-limit-countdown');

  // ============================================
  // Standardized error messages (from backend codes)
  // ============================================
  const ERROR_MESSAGES: Record<string, string> = {
    'ACCOUNT_NOT_FOUND': 'Kein Konto gefunden. Bitte erneut anmelden oder registrieren.',
    'ACCOUNT_SYNC_FAILED': 'Konto konnte nicht angelegt werden. Bitte erneut versuchen.',
    'EMAIL_MISSING': 'Google hat keine E-Mail √ºbermittelt. Bitte E-Mail-Login nutzen.',
    'AUTH_INVALID': 'Session abgelaufen. Bitte erneut anmelden.',
    'auth_failed': 'Anmeldung fehlgeschlagen. Bitte versuche es erneut.',
  };

  function getErrorMessage(code: string): string {
    return ERROR_MESSAGES[code] || code;
  }

  // Storage helper based on "remember me" preference
  function getStorage() {
    return rememberCheckbox?.checked ? localStorage : sessionStorage;
  }

  // Rate limit countdown
  let rateLimitTimer: number | null = null;

  function showRateLimitWarning(retryAfterMs: number) {
    if (rateLimitTimer) clearInterval(rateLimitTimer);
    
    const seconds = Math.ceil(retryAfterMs / 1000);
    if (rateLimitCountdown) rateLimitCountdown.textContent = String(seconds);
    rateLimitWarning?.classList.remove('hidden');
    errorEl?.classList.add('hidden');
    
    let remaining = seconds;
    rateLimitTimer = window.setInterval(() => {
      remaining--;
      if (rateLimitCountdown) rateLimitCountdown.textContent = String(remaining);
      if (remaining <= 0) {
        if (rateLimitTimer) clearInterval(rateLimitTimer);
        rateLimitWarning?.classList.add('hidden');
        setLoading(emailBtn, false);
        setLoading(googleBtn, false);
      }
    }, 1000);
  }

  // Check if user is already logged in
  async function checkExistingSession() {
    const redirectTo = new URLSearchParams(window.location.search).get('redirect') || '/';
    
    // Check both storages for existing token
    let token = localStorage.getItem('auth_token') || sessionStorage.getItem('auth_token');
    
    // Check Supabase session
    const { data: { session } } = await supabase.auth.getSession();
    
    if (session?.access_token) {
      token = session.access_token;
      // Store in localStorage by default if session exists
      localStorage.setItem('auth_token', token);
    }
    
    // Debug logging in dev mode
    if (import.meta.env.DEV) {
      console.log('[Auth Debug] checkExistingSession:', { hasToken: !!token, hasSession: !!session });
    }
    
    // Validate token with backend
    if (token) {
      try {
        const res = await fetch(`${API_BASE}/api/auth/me`, {
          headers: { Authorization: `Bearer ${token}` }
        });
        
        if (res.ok) {
          const data = await res.json();
          
          // Debug logging
          if (import.meta.env.DEV) {
            console.log('[Auth Debug] User verified:', data.data);
          }
          
          // Check admin permission for admin routes
          if (redirectTo.startsWith('/admin') && data.data?.role !== 'admin') {
            showError('Du hast keine Admin-Berechtigung.');
            localStorage.removeItem('auth_token');
            sessionStorage.removeItem('auth_token');
            await supabase.auth.signOut();
            return;
          }
          
          window.location.href = redirectTo;
          return;
        } else {
          // Debug logging
          if (import.meta.env.DEV) {
            const errorData = await res.clone().json().catch(() => ({}));
            console.log('[Auth Debug] Token validation failed:', res.status, errorData);
          }
          
          localStorage.removeItem('auth_token');
          sessionStorage.removeItem('auth_token');
          await supabase.auth.signOut();
        }
      } catch (err) {
        // Network error - don't remove token
        if (import.meta.env.DEV) {
          console.error('[Auth Debug] Network error during session check:', err);
        }
      }
    }
  }

  // Check for error in URL (from callback or redirect)
  function checkUrlError() {
    const urlParams = new URLSearchParams(window.location.search);
    const error = urlParams.get('error');
    
    if (error && errorEl) {
      // Use standardized error message mapping
      errorEl.textContent = getErrorMessage(error);
      errorEl.classList.remove('hidden');
      
      // Debug logging in dev mode
      if (import.meta.env.DEV) {
        console.log('[Auth Debug] URL error parameter:', error);
      }
      
      // Clear the error from URL to prevent showing it again on refresh
      const newUrl = new URL(window.location.href);
      newUrl.searchParams.delete('error');
      window.history.replaceState({}, '', newUrl.toString());
    }
  }

  // Show error message
  function showError(message: string) {
    if (errorEl) {
      errorEl.textContent = message;
      errorEl.classList.remove('hidden');
    }
    if (successEl) successEl.classList.add('hidden');
    rateLimitWarning?.classList.add('hidden');
  }

  // Show success message
  function showSuccess(message: string) {
    if (successEl) {
      successEl.textContent = message;
      successEl.classList.remove('hidden');
    }
    if (errorEl) errorEl.classList.add('hidden');
    rateLimitWarning?.classList.add('hidden');
  }

  // Set button loading state
  function setLoading(btn: HTMLElement | null, loading: boolean) {
    if (!btn) return;
    if (loading) {
      btn.setAttribute('disabled', 'true');
      btn.classList.add('opacity-60', 'cursor-not-allowed');
    } else {
      btn.removeAttribute('disabled');
      btn.classList.remove('opacity-60', 'cursor-not-allowed');
    }
  }

  // Google Login Handler
  googleBtn?.addEventListener('click', async () => {
    try {
      setLoading(googleBtn, true);
      if (errorEl) errorEl.classList.add('hidden');
      
      // Store redirect URL and remember preference for callback
      const redirectTo = new URLSearchParams(window.location.search).get('redirect') || '/';
      localStorage.setItem('auth_redirect', redirectTo);
      localStorage.setItem('auth_remember', rememberCheckbox?.checked ? 'true' : 'false');
      
      const data = await signInWithGoogle();
      if (data?.url) {
        window.location.href = data.url;
        return;
      }
      showError('Google-Anmeldung: Keine Weiterleitung erhalten. Bitte erneut versuchen.');
      setLoading(googleBtn, false);
    } catch (err: any) {
      showError('Google-Anmeldung fehlgeschlagen. Bitte versuche es erneut.');
      setLoading(googleBtn, false);
    }
  });

  // Email Login Handler
  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    if (errorEl) errorEl.classList.add('hidden');
    setLoading(emailBtn, true);

    const formData = new FormData(form);
    const email = formData.get('email') as string;
    const password = formData.get('password') as string;
    const remember = rememberCheckbox?.checked;

    try {
      const { session, user } = await signInWithEmail(email, password);

      // Debug logging in dev mode
      if (import.meta.env.DEV) {
        console.log('[Auth Debug] signInWithEmail result:', { session: !!session, user: !!user, userEmail: user?.email });
      }

      if (session && user) {
        // Store token based on "remember me" preference
        const storage = remember ? localStorage : sessionStorage;
        storage.setItem('auth_token', session.access_token);
        
        // Also store in localStorage for consistency with other parts of the app
        if (remember) {
          localStorage.setItem('auth_token', session.access_token);
        }

        // ============================================
        // CRITICAL: Sync user to backend database
        // This ensures the Prisma user exists before we consider the login successful
        // ============================================
        try {
          const syncResponse = await fetch(`${API_BASE}/api/auth/sync`, {
            method: 'POST',
            headers: { 'Authorization': `Bearer ${session.access_token}` }
          });

          if (!syncResponse.ok) {
            const syncData = await syncResponse.json().catch(() => ({}));
            const errorCode = syncData.error?.code || 'ACCOUNT_SYNC_FAILED';
            
            // Debug logging
            if (import.meta.env.DEV) {
              console.error('[Auth Debug] Sync failed:', syncData);
            }
            
            // Clean up - user is in Supabase but not synced to our DB
            localStorage.removeItem('auth_token');
            sessionStorage.removeItem('auth_token');
            try {
              await supabase.auth.signOut();
            } catch {
              // Ignore signOut errors
            }
            
            showError(getErrorMessage(errorCode));
            setLoading(emailBtn, false);
            return;
          }

          // Debug logging
          if (import.meta.env.DEV) {
            const syncData = await syncResponse.clone().json();
            console.log('[Auth Debug] Sync successful:', syncData);
          }
        } catch (syncErr) {
          // Network error during sync
          if (import.meta.env.DEV) {
            console.error('[Auth Debug] Sync network error:', syncErr);
          }
          
          localStorage.removeItem('auth_token');
          sessionStorage.removeItem('auth_token');
          try {
            await supabase.auth.signOut();
          } catch {
            // Ignore signOut errors
          }
          
          showError('Verbindung zum Server fehlgeschlagen. Bitte versuche es erneut.');
          setLoading(emailBtn, false);
          return;
        }

        // Sync successful - show success message
        showSuccess('Anmeldung erfolgreich! Du wirst weitergeleitet...');
        
        // Sync local saved events to backend
        try {
          const localIds = JSON.parse(localStorage.getItem('saved_events') || '[]');
          const headers = { 
            'Content-Type': 'application/json', 
            'Authorization': `Bearer ${session.access_token}` 
          };
          for (const eventId of localIds) {
            await fetch(`${API_BASE}/api/user/saved-events/${eventId}`, { method: 'POST', headers });
          }
        } catch (_) { /* Sync optional */ }

        // Redirect
        const redirectTo = new URLSearchParams(window.location.search).get('redirect') || '/';
        setTimeout(() => {
          window.location.href = redirectTo;
        }, 500);
      } else {
        showError('Anmeldung fehlgeschlagen. Bitte √ºberpr√ºfe deine Zugangsdaten.');
        setLoading(emailBtn, false);
      }
    } catch (err: any) {
      // Debug logging in dev mode
      if (import.meta.env.DEV) {
        console.error('[Auth Debug] Login error:', err);
      }

      // Handle rate limiting (429)
      if (err.status === 429 || err.message?.includes('rate limit') || err.message?.includes('Too many')) {
        const retryAfter = err.retry_after_ms || 60000; // Default 60 seconds
        showRateLimitWarning(retryAfter);
        return;
      }
      
      // Handle account locked
      if (err.message?.includes('locked') || err.code === 'ACCOUNT_LOCKED') {
        showError(err.message || 'Konto vor√ºbergehend gesperrt. Bitte versuche es sp√§ter erneut.');
        setLoading(emailBtn, false);
        return;
      }
      
      // Handle specific Supabase errors with helpful hints
      if (err.message?.includes('Invalid login credentials')) {
        showError('E-Mail oder Passwort falsch.');
      } else if (err.message?.includes('Email not confirmed')) {
        showError('Bitte best√§tige zuerst deine E-Mail-Adresse.');
      } else if (err.message?.includes('Invalid API key')) {
        showError('Konfigurationsfehler. Bitte kontaktiere den Administrator.');
      } else if (err.message?.includes('Signups not allowed')) {
        showError('Anmeldung momentan nicht m√∂glich. Bitte kontaktiere den Administrator.');
      } else {
        // Show the actual error message prominently
        showError(err.message || 'Ein Fehler ist aufgetreten. Bitte versuche es erneut.');
      }
      setLoading(emailBtn, false);
    }
  });

  // Initialize
  if (!isSupabaseConfigured) {
    showError('Authentifizierung ist momentan nicht verf√ºgbar. Bitte versuche es sp√§ter erneut.');
  } else {
    checkExistingSession();
  }
  checkUrlError();
</script>
