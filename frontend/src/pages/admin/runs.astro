---
import AdminLayout from '../../layouts/AdminLayout.astro';
const API_URL = import.meta.env.PUBLIC_API_URL || 'http://localhost:4000';
---

<AdminLayout title="Ingest-Runs - kiezling Admin" currentPage="runs">
  <!-- Page Header -->
  <div class="mb-6">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
      <div>
        <h1 class="text-2xl font-bold text-gray-900">Ingest-Runs</h1>
        <p class="text-gray-500 text-sm mt-1">Import-Jobs √ºberwachen und Fehler beheben</p>
      </div>
      <div class="flex items-center gap-2">
        <span id="run-count" class="text-sm text-gray-500 bg-gray-100 px-3 py-1 rounded-full"></span>
        <button id="refresh-btn" class="p-2 bg-white border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors" title="Aktualisieren">
          <svg id="refresh-icon" class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
          </svg>
        </button>
      </div>
    </div>

    <!-- Filters -->
    <div class="flex flex-wrap items-center gap-3 mt-4">
      <select id="status-filter" class="px-4 py-2 border border-gray-200 rounded-lg bg-white text-sm focus:ring-2 focus:ring-primary-500 focus:border-primary-500">
        <option value="">Alle Status</option>
        <option value="completed">Erfolgreich</option>
        <option value="failed">Fehlgeschlagen</option>
        <option value="running">Laufend</option>
        <option value="cancelled">Abgebrochen</option>
      </select>
      
      <label class="flex items-center gap-2 px-4 py-2 bg-white border border-gray-200 rounded-lg text-sm cursor-pointer hover:bg-gray-50 transition-colors">
        <input type="checkbox" id="attention-filter" class="w-4 h-4 text-primary-500 rounded border-gray-300 focus:ring-primary-500">
        <span class="text-gray-700">Needs Attention</span>
      </label>

      <span id="auto-refresh-indicator" class="text-xs text-gray-400 ml-auto">
        <span class="inline-block w-2 h-2 bg-green-400 rounded-full mr-1 animate-pulse"></span>
        Auto-refresh in <span id="countdown">60</span>s
      </span>
    </div>
  </div>

  <!-- Summary Stats -->
  <div id="summary-stats" class="grid grid-cols-1 sm:grid-cols-3 gap-4 mb-6 hidden">
    <div class="bg-white rounded-xl border border-gray-200 p-4">
      <div class="flex items-center gap-3">
        <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center">
          <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
          </svg>
        </div>
        <div>
          <p class="text-sm text-gray-500">Runs heute</p>
          <p id="stat-total" class="text-xl font-bold text-gray-900">-</p>
        </div>
      </div>
    </div>
    <div class="bg-white rounded-xl border border-gray-200 p-4">
      <div class="flex items-center gap-3">
        <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center">
          <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <div>
          <p class="text-sm text-gray-500">Erfolgsrate</p>
          <p id="stat-success-rate" class="text-xl font-bold text-gray-900">-</p>
        </div>
      </div>
    </div>
    <div class="bg-white rounded-xl border border-gray-200 p-4">
      <div class="flex items-center gap-3">
        <div class="w-10 h-10 bg-purple-100 rounded-lg flex items-center justify-center">
          <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
        </div>
        <div>
          <p class="text-sm text-gray-500">√ò Events pro Run</p>
          <p id="stat-avg-events" class="text-xl font-bold text-gray-900">-</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Attention Banner -->
  <div id="attention-banner" class="hidden mb-6 bg-orange-50 border border-orange-200 rounded-xl p-4">
    <div class="flex items-center gap-3">
      <div class="w-10 h-10 bg-orange-100 rounded-lg flex items-center justify-center flex-shrink-0">
        <svg class="w-5 h-5 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
        </svg>
      </div>
      <div>
        <p class="font-medium text-orange-800"><span id="attention-count">0</span> Runs ben√∂tigen Aufmerksamkeit</p>
        <p class="text-sm text-orange-600">Diese Runs haben Fehler und wurden noch nicht best√§tigt.</p>
      </div>
    </div>
  </div>

  <!-- Loading State -->
  <div id="loading-state" class="flex items-center justify-center py-16">
    <div class="text-center">
      <div class="animate-spin inline-block w-10 h-10 border-4 border-primary-500 border-t-transparent rounded-full"></div>
      <p class="text-gray-500 mt-4">Lade Runs...</p>
    </div>
  </div>

  <!-- Runs List -->
  <div id="runs-list" class="space-y-3 hidden"></div>

  <!-- Empty State -->
  <div id="empty-state" class="hidden">
    <div class="bg-white rounded-xl border border-gray-200 p-12 text-center">
      <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
        <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
        </svg>
      </div>
      <h3 class="text-lg font-medium text-gray-900 mb-2">Keine Runs gefunden</h3>
      <p class="text-gray-500">Es gibt keine Ingest-Runs, die den Filterkriterien entsprechen.</p>
    </div>
  </div>

  <!-- Error Detail Modal -->
  <div class="fixed inset-0 bg-black/50 hidden items-center justify-center z-50 p-4" id="error-modal">
    <div class="bg-white rounded-xl max-w-2xl w-full max-h-[85vh] overflow-hidden flex flex-col shadow-2xl">
      <div class="p-4 border-b flex items-center justify-between bg-gray-50">
        <div class="flex items-center gap-3">
          <div class="w-8 h-8 bg-red-100 rounded-lg flex items-center justify-center">
            <svg class="w-4 h-4 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="font-semibold text-gray-900">Fehlerdetails</h3>
        </div>
        <button id="modal-close" class="p-1 text-gray-400 hover:text-gray-600 hover:bg-gray-100 rounded-lg transition-colors">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
      
      <div class="p-4 overflow-y-auto flex-1 space-y-4">
        <div>
          <span class="text-xs font-medium text-gray-500 uppercase tracking-wider">Run-Info</span>
          <div class="mt-2 bg-gray-50 rounded-lg p-3">
            <div class="grid grid-cols-2 gap-2 text-sm">
              <div>
                <span class="text-gray-500">Correlation-ID:</span>
                <code id="modal-correlation" class="block bg-white px-2 py-1 rounded mt-1 font-mono text-xs break-all"></code>
              </div>
              <div>
                <span class="text-gray-500">Quelle:</span>
                <p id="modal-source" class="font-medium mt-1"></p>
              </div>
            </div>
          </div>
        </div>

        <div>
          <span class="text-xs font-medium text-gray-500 uppercase tracking-wider">Fehlermeldung</span>
          <pre id="modal-error" class="mt-2 bg-red-50 text-red-700 px-4 py-3 rounded-lg text-sm overflow-x-auto whitespace-pre-wrap border border-red-100"></pre>
        </div>

        <div id="modal-details-section" class="hidden">
          <span class="text-xs font-medium text-gray-500 uppercase tracking-wider">Stack Trace / Details</span>
          <pre id="modal-details" class="mt-2 bg-gray-900 text-gray-100 px-4 py-3 rounded-lg text-xs overflow-x-auto font-mono max-h-64"></pre>
        </div>

        <div id="modal-items-section" class="hidden">
          <span class="text-xs font-medium text-gray-500 uppercase tracking-wider">Betroffene Items</span>
          <div id="modal-items" class="mt-2 space-y-2 max-h-48 overflow-y-auto"></div>
        </div>
      </div>

      <div class="p-4 border-t bg-gray-50 flex gap-3">
        <button id="acknowledge-btn" class="flex-1 px-4 py-2 bg-green-500 text-white rounded-lg hover:bg-green-600 transition-colors flex items-center justify-center gap-2 font-medium">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
          Als bearbeitet markieren
        </button>
        <button id="modal-close-btn" class="px-4 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition-colors font-medium">
          Schlie√üen
        </button>
      </div>
    </div>
  </div>
</AdminLayout>

<script is:inline define:vars={{ API_URL }}>
  let runs = [];
  let currentRunId = null;
  let autoRefreshInterval = null;
  let countdownInterval = null;
  let countdown = 60;

  // Get token
  function getToken() {
    return localStorage.getItem('auth_token');
  }

  // Fetch helper
  async function apiFetch(endpoint, options = {}) {
    const token = getToken();
    if (!token) {
      window.location.href = '/login?redirect=/admin/runs';
      throw new Error('No token');
    }

    const res = await fetch(`${API_URL}${endpoint}`, {
      ...options,
      headers: {
        'Content-Type': 'application/json',
        Authorization: `Bearer ${token}`,
        ...options.headers,
      },
    });

    if (res.status === 401 || res.status === 403) {
      localStorage.removeItem('auth_token');
      window.location.href = '/login?redirect=/admin/runs';
      throw new Error('Unauthorized');
    }

    return res.json();
  }

  // Format relative time
  function formatRelativeTime(dateStr) {
    if (!dateStr) return '-';
    const date = new Date(dateStr);
    const now = new Date();
    const diffMs = now - date;
    const diffMins = Math.floor(diffMs / 60000);
    const diffHours = Math.floor(diffMs / 3600000);
    const diffDays = Math.floor(diffMs / 86400000);

    if (diffMins < 1) return 'gerade eben';
    if (diffMins < 60) return `vor ${diffMins}m`;
    if (diffHours < 24) return `vor ${diffHours}h`;
    return `vor ${diffDays}d`;
  }

  // Load runs
  async function loadRuns() {
    const loadingState = document.getElementById('loading-state');
    const runsList = document.getElementById('runs-list');
    const emptyState = document.getElementById('empty-state');
    const refreshIcon = document.getElementById('refresh-icon');

    loadingState?.classList.remove('hidden');
    runsList?.classList.add('hidden');
    emptyState?.classList.add('hidden');
    refreshIcon?.classList.add('animate-spin');

    try {
      const params = new URLSearchParams({ limit: '50' });
      const status = document.getElementById('status-filter')?.value;
      const attention = document.getElementById('attention-filter')?.checked;

      if (status) params.set('status', status);
      if (attention) params.set('needs_attention', 'true');

      const data = await apiFetch(`/api/admin/ingest-runs?${params}`);
      runs = data.data || [];

      document.getElementById('run-count').textContent = `${runs.length} Runs`;

      // Update attention banner
      const attentionCount = runs.filter(r => r.needs_attention).length;
      const attentionBanner = document.getElementById('attention-banner');
      if (attentionCount > 0) {
        document.getElementById('attention-count').textContent = attentionCount;
        attentionBanner?.classList.remove('hidden');
      } else {
        attentionBanner?.classList.add('hidden');
      }

      // Update summary stats
      updateSummaryStats(runs);

      if (runs.length === 0) {
        emptyState?.classList.remove('hidden');
      } else {
        renderRuns();
        runsList?.classList.remove('hidden');
      }
    } catch (e) {
      console.error('Load error:', e);
      emptyState?.classList.remove('hidden');
      const emptyContent = emptyState?.querySelector('p');
      if (emptyContent) {
        emptyContent.textContent = 'Fehler beim Laden der Runs.';
        emptyContent.classList.add('text-red-500');
      }
    } finally {
      loadingState?.classList.add('hidden');
      refreshIcon?.classList.remove('animate-spin');
      resetCountdown();
    }
  }

  // Update summary stats
  function updateSummaryStats(runs) {
    const statsContainer = document.getElementById('summary-stats');
    
    // Only show stats if we have runs
    if (runs.length === 0) {
      statsContainer?.classList.add('hidden');
      return;
    }
    
    statsContainer?.classList.remove('hidden');

    // Calculate today's runs
    const today = new Date();
    today.setHours(0, 0, 0, 0);
    const todayRuns = runs.filter(r => new Date(r.started_at) >= today);

    // Success rate
    const completedRuns = runs.filter(r => r.status === 'completed' || r.status === 'success');
    const failedRuns = runs.filter(r => r.status === 'failed');
    const successRate = runs.length > 0 
      ? Math.round((completedRuns.length / (completedRuns.length + failedRuns.length)) * 100) || 0
      : 0;

    // Average events per run
    const totalEvents = runs.reduce((sum, r) => sum + (r.events_created || 0) + (r.events_updated || 0), 0);
    const avgEvents = runs.length > 0 ? Math.round(totalEvents / runs.length) : 0;

    document.getElementById('stat-total').textContent = todayRuns.length;
    document.getElementById('stat-success-rate').textContent = `${successRate}%`;
    document.getElementById('stat-avg-events').textContent = avgEvents;
  }

  // Render runs
  function renderRuns() {
    const runsList = document.getElementById('runs-list');
    if (!runsList) return;

    const statusConfig = {
      running: { bg: 'bg-blue-100', text: 'text-blue-700', border: 'border-blue-200', label: 'Laufend', icon: 'üîÑ' },
      completed: { bg: 'bg-green-100', text: 'text-green-700', border: 'border-green-200', label: 'Erfolgreich', icon: '‚úì' },
      success: { bg: 'bg-green-100', text: 'text-green-700', border: 'border-green-200', label: 'Erfolgreich', icon: '‚úì' },
      partial: { bg: 'bg-yellow-100', text: 'text-yellow-700', border: 'border-yellow-200', label: 'Teilweise', icon: '‚ö°' },
      failed: { bg: 'bg-red-100', text: 'text-red-700', border: 'border-red-200', label: 'Fehlgeschlagen', icon: '‚úï' },
      cancelled: { bg: 'bg-gray-100', text: 'text-gray-700', border: 'border-gray-200', label: 'Abgebrochen', icon: '‚èπ' },
    };

    runsList.innerHTML = runs.map(run => {
      const config = statusConfig[run.status] || statusConfig.cancelled;
      const isFailed = run.status === 'failed';
      const needsAttention = run.needs_attention;
      
      // Calculate success rate for progress bar
      const found = run.events_found || 0;
      const created = run.events_created || 0;
      const updated = run.events_updated || 0;
      const successCount = created + updated;
      const successRate = found > 0 ? Math.round((successCount / found) * 100) : 0;

      // Border color based on status
      let borderClass = 'border-gray-200';
      if (needsAttention) borderClass = 'border-orange-300 border-2';
      else if (isFailed) borderClass = 'border-red-200';

      return `
        <div class="bg-white rounded-xl ${borderClass} p-4 hover:shadow-md transition-shadow">
          <div class="flex flex-col sm:flex-row sm:items-center gap-4">
            <!-- Left: Status & Info -->
            <div class="flex-1 min-w-0">
              <div class="flex items-center gap-3 mb-2">
                <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-medium ${config.bg} ${config.text}">
                  <span>${config.icon}</span>
                  ${config.label}
                </span>
                ${needsAttention ? `
                  <span class="inline-flex items-center gap-1 px-2 py-1 bg-orange-100 text-orange-700 rounded-full text-xs font-medium">
                    <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                    </svg>
                    Attention
                  </span>
                ` : ''}
                <span class="text-xs text-gray-400">${formatRelativeTime(run.started_at)}</span>
              </div>
              
              <div class="flex items-center gap-2 text-sm">
                <span class="font-medium text-gray-900">${run.source?.name || 'Unbekannte Quelle'}</span>
                <span class="text-gray-300">|</span>
                <code class="text-xs text-gray-500 bg-gray-100 px-1.5 py-0.5 rounded font-mono truncate max-w-[200px]" title="${run.correlation_id}">${run.correlation_id?.slice(0, 12)}...</code>
              </div>

              ${run.error_message ? `
                <p class="mt-2 text-sm text-red-600 bg-red-50 px-3 py-1.5 rounded-lg truncate">
                  ${run.error_message.slice(0, 100)}${run.error_message.length > 100 ? '...' : ''}
                </p>
              ` : ''}
            </div>

            <!-- Middle: Stats -->
            <div class="flex items-center gap-4 text-sm">
              <div class="flex items-center gap-4">
                <div class="text-center">
                  <p class="text-lg font-semibold text-gray-900">${found}</p>
                  <p class="text-xs text-gray-500">Gefunden</p>
                </div>
                <div class="text-center">
                  <p class="text-lg font-semibold text-green-600">${created}</p>
                  <p class="text-xs text-gray-500">Erstellt</p>
                </div>
                <div class="text-center">
                  <p class="text-lg font-semibold text-blue-600">${updated}</p>
                  <p class="text-xs text-gray-500">Aktualisiert</p>
                </div>
                <div class="text-center">
                  <p class="text-lg font-semibold text-gray-400">${run.events_skipped || 0}</p>
                  <p class="text-xs text-gray-500">√úbersprungen</p>
                </div>
              </div>
              
              <!-- Mini Progress Bar -->
              <div class="hidden sm:block w-16">
                <div class="h-2 bg-gray-200 rounded-full overflow-hidden">
                  <div class="h-full bg-green-500 rounded-full transition-all" style="width: ${successRate}%"></div>
                </div>
                <p class="text-xs text-gray-500 text-center mt-1">${successRate}%</p>
              </div>
            </div>

            <!-- Right: Actions -->
            <div class="flex items-center gap-2">
              ${needsAttention ? `
                <button class="ack-inline-btn p-2 bg-green-100 text-green-700 rounded-lg hover:bg-green-200 transition-colors" data-id="${run.id}" title="Als bearbeitet markieren">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                </button>
              ` : ''}
              ${run.error_message ? `
                <button class="details-btn px-3 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-colors text-sm font-medium flex items-center gap-1" data-id="${run.id}">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  Details
                </button>
              ` : ''}
            </div>
          </div>
        </div>
      `;
    }).join('');

    // Attach event listeners
    runsList.querySelectorAll('.details-btn').forEach(btn => {
      btn.addEventListener('click', () => openErrorModal(btn.dataset.id));
    });

    runsList.querySelectorAll('.ack-inline-btn').forEach(btn => {
      btn.addEventListener('click', async (e) => {
        e.stopPropagation();
        await acknowledgeRunInline(btn.dataset.id, btn);
      });
    });
  }

  // Open error modal
  function openErrorModal(id) {
    currentRunId = id;
    const run = runs.find(r => r.id === id);
    if (!run) return;

    document.getElementById('modal-correlation').textContent = run.correlation_id;
    document.getElementById('modal-source').textContent = run.source?.name || 'Unbekannte Quelle';
    document.getElementById('modal-error').textContent = run.error_message || 'Keine Fehlermeldung';

    // Details/Stack trace
    const detailsSection = document.getElementById('modal-details-section');
    if (run.error_details) {
      const details = typeof run.error_details === 'string' 
        ? run.error_details 
        : JSON.stringify(run.error_details, null, 2);
      document.getElementById('modal-details').textContent = details;
      detailsSection?.classList.remove('hidden');
    } else {
      detailsSection?.classList.add('hidden');
    }

    // Items
    const itemsSection = document.getElementById('modal-items-section');
    const itemsContainer = document.getElementById('modal-items');
    if (run.failed_items && run.failed_items.length > 0) {
      itemsContainer.innerHTML = run.failed_items.map(item => `
        <div class="bg-gray-50 rounded-lg p-3 text-sm">
          <p class="font-medium text-gray-900">${item.title || item.url || 'Unbekanntes Item'}</p>
          ${item.error ? `<p class="text-red-600 text-xs mt-1">${item.error}</p>` : ''}
        </div>
      `).join('');
      itemsSection?.classList.remove('hidden');
    } else {
      itemsSection?.classList.add('hidden');
    }

    // Show/hide acknowledge button
    const ackBtn = document.getElementById('acknowledge-btn');
    if (run.needs_attention) {
      ackBtn?.classList.remove('hidden');
    } else {
      ackBtn?.classList.add('hidden');
    }

    const modal = document.getElementById('error-modal');
    modal?.classList.remove('hidden');
    modal?.classList.add('flex');
  }

  // Close modal
  function closeModal() {
    const modal = document.getElementById('error-modal');
    modal?.classList.add('hidden');
    modal?.classList.remove('flex');
    currentRunId = null;
  }

  // Acknowledge run from modal
  async function acknowledgeRun() {
    if (!currentRunId) return;

    const btn = document.getElementById('acknowledge-btn');
    const originalHtml = btn?.innerHTML;
    if (btn) {
      btn.disabled = true;
      btn.innerHTML = `
        <svg class="w-5 h-5 animate-spin" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
        Wird gespeichert...
      `;
    }

    try {
      await apiFetch(`/api/admin/ingest-runs/${currentRunId}/acknowledge`, { method: 'POST' });
      closeModal();
      loadRuns();
    } catch (e) {
      alert('Fehler: ' + e.message);
      if (btn) {
        btn.disabled = false;
        btn.innerHTML = originalHtml;
      }
    }
  }

  // Acknowledge run inline
  async function acknowledgeRunInline(id, btn) {
    const originalHtml = btn.innerHTML;
    btn.disabled = true;
    btn.innerHTML = `
      <svg class="w-5 h-5 animate-spin" fill="none" viewBox="0 0 24 24">
        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
      </svg>
    `;

    try {
      await apiFetch(`/api/admin/ingest-runs/${id}/acknowledge`, { method: 'POST' });
      loadRuns();
    } catch (e) {
      alert('Fehler: ' + e.message);
      btn.disabled = false;
      btn.innerHTML = originalHtml;
    }
  }

  // Auto-refresh countdown
  function resetCountdown() {
    countdown = 60;
    document.getElementById('countdown').textContent = countdown;
  }

  function startAutoRefresh() {
    // Clear existing intervals
    if (autoRefreshInterval) clearInterval(autoRefreshInterval);
    if (countdownInterval) clearInterval(countdownInterval);

    // Countdown ticker
    countdownInterval = setInterval(() => {
      countdown--;
      document.getElementById('countdown').textContent = countdown;
      if (countdown <= 0) {
        resetCountdown();
      }
    }, 1000);

    // Auto-refresh every 60 seconds
    autoRefreshInterval = setInterval(() => {
      loadRuns();
    }, 60000);
  }

  // Event listeners
  document.getElementById('status-filter')?.addEventListener('change', loadRuns);
  document.getElementById('attention-filter')?.addEventListener('change', loadRuns);
  document.getElementById('refresh-btn')?.addEventListener('click', loadRuns);
  document.getElementById('modal-close')?.addEventListener('click', closeModal);
  document.getElementById('modal-close-btn')?.addEventListener('click', closeModal);
  document.getElementById('acknowledge-btn')?.addEventListener('click', acknowledgeRun);
  document.getElementById('error-modal')?.addEventListener('click', (e) => {
    if (e.target.id === 'error-modal') closeModal();
  });

  // Keyboard shortcuts
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') closeModal();
    if (e.key === 'r' && !e.ctrlKey && !e.metaKey && document.activeElement?.tagName !== 'INPUT') {
      loadRuns();
    }
  });

  // Initial load
  setTimeout(() => {
    loadRuns();
    startAutoRefresh();
  }, 100);
</script>
