      filterAndRenderEvents();
      closeDetailModal();
      loadStatusCounts();
    } catch (e) {
      alert('Fehler: ' + e.message);
    } finally {
      if (btn) {
        btn.disabled = false;
        btn.innerHTML = originalHTML;
      }
    }
  }

