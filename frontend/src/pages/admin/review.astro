    try {
      await apiFetch(`/api/admin/review/${currentEventId}/reject`, {
        method: 'POST',
        body: JSON.stringify({ reason_code: reasonCode, reason: reasonText }),
      });
      allEvents = allEvents.filter(e => e.id !== currentEventId);
      filterAndRenderEvents();
      closeRejectModal();
      loadStatusCounts();
    } catch (e) {
