---
import AdminLayout from '../../layouts/AdminLayout.astro';
const API_URL = import.meta.env.PUBLIC_API_URL || 'http://localhost:4000';
---

<AdminLayout title="Quellen - kiezling Admin" currentPage="sources">
  <!-- Header Section -->
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 mb-6">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">Quellen</h1>
      <p class="text-gray-500 text-sm mt-1">Verwaltung und Status aller Datenquellen</p>
    </div>
    <div class="flex items-center gap-2">
      <button 
        id="trigger-all-btn" 
        class="px-4 py-2 bg-primary-500 text-white rounded-lg hover:bg-primary-600 transition text-sm font-medium flex items-center gap-2"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
        </svg>
        Trigger All
      </button>
      <button 
        id="add-source-btn" 
        class="px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition text-sm font-medium flex items-center gap-2"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        + Neue Quelle
      </button>
    </div>
  </div>

  <!-- Search and Filter Row -->
  <div class="flex flex-col sm:flex-row gap-4 mb-6">
    <div class="flex-1 relative">
      <svg class="absolute left-3 top-1/2 -translate-y-1/2 w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
      </svg>
      <input 
        id="search-input" 
        type="text" 
        placeholder="Suche nach Name oder URL..." 
        class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 outline-none transition text-sm"
      />
    </div>
    <select 
      id="status-filter" 
      class="px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 outline-none transition text-sm bg-white min-w-[150px]"
    >
      <option value="all">Alle Status</option>
      <option value="healthy">Healthy</option>
      <option value="degraded">Degraded</option>
      <option value="failing">Failing</option>
      <option value="dead">Dead</option>
      <option value="unknown">Unknown</option>
    </select>
  </div>

  <!-- Summary Stats Row -->
  <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-5 gap-3 mb-6">
    <div class="bg-white rounded-xl p-4 border border-gray-200 shadow-sm">
      <div class="flex items-center gap-3">
        <div class="w-3 h-3 rounded-full bg-green-500"></div>
        <div>
          <span id="healthy-count" class="block text-xl font-bold text-green-600">--</span>
          <span class="text-xs text-gray-500">Healthy</span>
        </div>
      </div>
    </div>
    <div class="bg-white rounded-xl p-4 border border-gray-200 shadow-sm">
      <div class="flex items-center gap-3">
        <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
        <div>
          <span id="degraded-count" class="block text-xl font-bold text-yellow-600">--</span>
          <span class="text-xs text-gray-500">Degraded</span>
        </div>
      </div>
    </div>
    <div class="bg-white rounded-xl p-4 border border-gray-200 shadow-sm">
      <div class="flex items-center gap-3">
        <div class="w-3 h-3 rounded-full bg-orange-500"></div>
        <div>
          <span id="failing-count" class="block text-xl font-bold text-orange-600">--</span>
          <span class="text-xs text-gray-500">Failing</span>
        </div>
      </div>
    </div>
    <div class="bg-white rounded-xl p-4 border border-gray-200 shadow-sm">
      <div class="flex items-center gap-3">
        <div class="w-3 h-3 rounded-full bg-red-500"></div>
        <div>
          <span id="dead-count" class="block text-xl font-bold text-red-600">--</span>
          <span class="text-xs text-gray-500">Dead</span>
        </div>
      </div>
    </div>
    <div class="bg-white rounded-xl p-4 border border-gray-200 shadow-sm">
      <div class="flex items-center gap-3">
        <div class="w-3 h-3 rounded-full bg-gray-400"></div>
        <div>
          <span id="unknown-count" class="block text-xl font-bold text-gray-500">--</span>
          <span class="text-xs text-gray-500">Unknown</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Loading State -->
  <div id="loading-state" class="text-center py-12">
    <div class="animate-spin inline-block w-8 h-8 border-4 border-primary-500 border-t-transparent rounded-full"></div>
    <p class="text-gray-500 mt-4">Lade Quellen...</p>
  </div>

  <!-- Empty State -->
  <div id="empty-state" class="hidden text-center py-12 bg-white rounded-xl border border-gray-200">
    <svg class="w-16 h-16 mx-auto text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
    </svg>
    <h3 class="text-lg font-medium text-gray-900 mb-1">Keine Quellen gefunden</h3>
    <p class="text-gray-500 text-sm">Passen Sie die Filter an oder fügen Sie eine neue Quelle hinzu.</p>
  </div>

  <!-- Sources Table -->
  <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden hidden" id="source-table">
    <div class="overflow-x-auto">
      <table class="w-full">
        <thead class="bg-gray-50 border-b border-gray-200">
          <tr>
            <th class="w-8 px-4 py-3"></th>
            <th class="px-4 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Status</th>
            <th class="px-4 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Quelle</th>
            <th class="px-4 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Typ</th>
            <th class="px-4 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Letzter Erfolg</th>
            <th class="px-4 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Events/Fetch</th>
            <th class="px-4 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Fehler</th>
          </tr>
        </thead>
        <tbody id="source-tbody" class="divide-y divide-gray-100"></tbody>
      </table>
    </div>
  </div>

  <!-- Edit Modal -->
  <div id="edit-modal" class="fixed inset-0 bg-black/50 z-50 hidden flex items-center justify-center p-4">
    <div class="bg-white rounded-xl shadow-xl w-full max-w-lg max-h-[90vh] overflow-y-auto">
      <div class="p-4 border-b border-gray-200 flex items-center justify-between sticky top-0 bg-white">
        <h2 id="modal-title" class="text-lg font-semibold text-gray-900">Quelle bearbeiten</h2>
        <button id="modal-close" class="p-1 hover:bg-gray-100 rounded-lg transition">
          <svg class="w-6 h-6 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
      <form id="edit-form" class="p-4 space-y-4">
        <input type="hidden" id="edit-id" />
        
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Name *</label>
          <input 
            type="text" 
            id="edit-name" 
            required
            class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 outline-none transition text-sm"
          />
        </div>
        
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">URL *</label>
          <input 
            type="url" 
            id="edit-url" 
            required
            class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 outline-none transition text-sm"
          />
        </div>
        
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Typ</label>
          <select 
            id="edit-type"
            class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 outline-none transition text-sm bg-white"
          >
            <option value="rss">RSS</option>
            <option value="html">HTML</option>
            <option value="ics">ICS</option>
          </select>
        </div>
        
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Priorität</label>
          <input 
            type="number" 
            id="edit-priority" 
            min="1" 
            max="10"
            class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 outline-none transition text-sm"
          />
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Fetch Interval (Minuten)</label>
          <input 
            type="number" 
            id="edit-interval" 
            min="5"
            class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 outline-none transition text-sm"
          />
        </div>
        
        <div class="flex items-center gap-2">
          <input 
            type="checkbox" 
            id="edit-active" 
            class="w-4 h-4 text-primary-500 border-gray-300 rounded focus:ring-primary-500"
          />
          <label for="edit-active" class="text-sm font-medium text-gray-700">Aktiv</label>
        </div>
        
        <div class="flex gap-2 pt-4 border-t border-gray-200">
          <button 
            type="button" 
            id="modal-cancel" 
            class="flex-1 px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition text-sm font-medium"
          >
            Abbrechen
          </button>
          <button 
            type="submit" 
            class="flex-1 px-4 py-2 bg-primary-500 text-white rounded-lg hover:bg-primary-600 transition text-sm font-medium"
          >
            Speichern
          </button>
        </div>
      </form>
    </div>
  </div>

  <!-- Delete Confirmation Modal -->
  <div id="delete-modal" class="fixed inset-0 bg-black/50 z-50 hidden flex items-center justify-center p-4">
    <div class="bg-white rounded-xl shadow-xl w-full max-w-sm">
      <div class="p-6 text-center">
        <div class="w-12 h-12 mx-auto mb-4 bg-red-100 rounded-full flex items-center justify-center">
          <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
          </svg>
        </div>
        <h3 class="text-lg font-semibold text-gray-900 mb-2">Quelle löschen?</h3>
        <p id="delete-message" class="text-sm text-gray-500 mb-6">
          Möchten Sie diese Quelle wirklich löschen? Diese Aktion kann nicht rückgängig gemacht werden.
        </p>
        <div class="flex gap-2">
          <button 
            id="delete-cancel" 
            class="flex-1 px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition text-sm font-medium"
          >
            Abbrechen
          </button>
          <button 
            id="delete-confirm" 
            class="flex-1 px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition text-sm font-medium"
          >
            Löschen
          </button>
        </div>
      </div>
    </div>
  </div>
</AdminLayout>

<style>
  .source-row.expanded .expand-chevron {
    transform: rotate(180deg);
  }
  
  .source-row .expanded-content {
    display: none;
  }
  
  .source-row.expanded .expanded-content {
    display: table-row;
  }
  
  .type-badge {
    display: inline-flex;
    align-items: center;
    padding: 0.25rem 0.5rem;
    font-size: 0.75rem;
    font-weight: 500;
    border-radius: 0.375rem;
    text-transform: uppercase;
  }
  
  .type-badge.rss { background: #dbeafe; color: #1e40af; }
  .type-badge.html { background: #fef3c7; color: #92400e; }
  .type-badge.ics { background: #d1fae5; color: #065f46; }
  
  .status-dot {
    width: 0.625rem;
    height: 0.625rem;
    border-radius: 9999px;
    flex-shrink: 0;
  }
  
  .status-dot.healthy { background: #22c55e; }
  .status-dot.degraded { background: #eab308; }
  .status-dot.failing { background: #f97316; }
  .status-dot.dead { background: #ef4444; }
  .status-dot.unknown { background: #9ca3af; }
  
  @keyframes spin {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }
  
  .animate-spin-slow {
    animation: spin 1s linear infinite;
  }
</style>

<script is:inline define:vars={{ API_URL }}>
  let sources = [];
  let filteredSources = [];
  let expandedRows = new Set();
  let activePolling = {};
  let deleteSourceId = null;
  const token = localStorage.getItem('auth_token');

  // Status config
  const statusConfig = {
    healthy: { color: 'green', label: 'Healthy', dotClass: 'healthy' },
    degraded: { color: 'yellow', label: 'Degraded', dotClass: 'degraded' },
    failing: { color: 'orange', label: 'Failing', dotClass: 'failing' },
    dead: { color: 'red', label: 'Dead', dotClass: 'dead' },
    unknown: { color: 'gray', label: 'Unknown', dotClass: 'unknown' },
  };

  // API helper
  async function apiFetch(endpoint, options = {}) {
    const res = await fetch(`${API_URL}${endpoint}`, {
      ...options,
      headers: {
        'Content-Type': 'application/json',
        Authorization: `Bearer ${token}`,
        ...options.headers,
      },
    });
    if (res.status === 401 || res.status === 403) {
      localStorage.removeItem('auth_token');
      window.location.href = '/login?redirect=/admin/sources';
      throw new Error('Unauthorized');
    }
    const data = await res.json();
    // Throw error for non-success responses so they're caught in try/catch
    if (!res.ok && data.error) {
      throw new Error(data.error.message || `HTTP ${res.status}`);
    }
    return data;
  }

  // Format relative time
  function formatRelativeTime(dateStr) {
    if (!dateStr) return 'Nie';
    const date = new Date(dateStr);
    const now = new Date();
    const diffMs = now - date;
    const diffMins = Math.floor(diffMs / 60000);
    const diffHours = Math.floor(diffMins / 60);
    const diffDays = Math.floor(diffHours / 24);
    
    if (diffMins < 1) return 'Gerade eben';
    if (diffMins < 60) return `vor ${diffMins} Min.`;
    if (diffHours < 24) return `vor ${diffHours} Std.`;
    if (diffDays < 7) return `vor ${diffDays} Tagen`;
    return date.toLocaleDateString('de-DE', { day: '2-digit', month: '2-digit' });
  }

  // Format full date
  function formatFullDate(dateStr) {
    if (!dateStr) return '-';
    return new Date(dateStr).toLocaleString('de-DE', {
      day: '2-digit',
      month: '2-digit',
      year: 'numeric',
      hour: '2-digit',
      minute: '2-digit'
    });
  }

  // Load sources
  async function loadSources() {
    document.getElementById('loading-state').classList.remove('hidden');
    document.getElementById('source-table').classList.add('hidden');
    document.getElementById('empty-state').classList.add('hidden');

    try {
      const data = await apiFetch('/api/sources');
      sources = data.data || [];
      
      // Count by status
      const counts = { healthy: 0, degraded: 0, failing: 0, dead: 0, unknown: 0 };
      sources.forEach(s => {
        const status = s.health_status || 'unknown';
        counts[status] = (counts[status] || 0) + 1;
      });

      document.getElementById('healthy-count').textContent = counts.healthy;
      document.getElementById('degraded-count').textContent = counts.degraded;
      document.getElementById('failing-count').textContent = counts.failing;
      document.getElementById('dead-count').textContent = counts.dead;
      document.getElementById('unknown-count').textContent = counts.unknown;

      applyFilters();
    } catch (e) {
      console.error('Load error:', e);
    } finally {
      document.getElementById('loading-state').classList.add('hidden');
    }
  }

  // Apply filters
  function applyFilters() {
    const searchTerm = document.getElementById('search-input').value.toLowerCase();
    const statusFilter = document.getElementById('status-filter').value;

    filteredSources = sources.filter(source => {
      const matchesSearch = !searchTerm || 
        source.name?.toLowerCase().includes(searchTerm) ||
        source.url?.toLowerCase().includes(searchTerm);
      
      const matchesStatus = statusFilter === 'all' || 
        (source.health_status || 'unknown') === statusFilter;
      
      return matchesSearch && matchesStatus;
    });

    renderTable();
  }

  // Render table
  function renderTable() {
    const tbody = document.getElementById('source-tbody');
    
    if (filteredSources.length === 0) {
      document.getElementById('source-table').classList.add('hidden');
      document.getElementById('empty-state').classList.remove('hidden');
      return;
    }

    document.getElementById('source-table').classList.remove('hidden');
    document.getElementById('empty-state').classList.add('hidden');

    tbody.innerHTML = filteredSources.map(source => {
      const status = source.health_status || 'unknown';
      const config = statusConfig[status];
      const isExpanded = expandedRows.has(source.id);
      const isActive = source.is_active !== false;
      const lastSuccess = formatRelativeTime(source.last_success_at);
      const avgEvents = source.avg_events_per_fetch?.toFixed(1) || '-';
      const errorCount = source.consecutive_failures || 0;

      return `
        <tr class="source-row hover:bg-gray-50 cursor-pointer ${isExpanded ? 'expanded' : ''} ${!isActive ? 'opacity-60' : ''}" data-id="${source.id}">
          <td class="px-4 py-3">
            <button class="expand-btn p-1 hover:bg-gray-200 rounded transition-transform ${isExpanded ? 'rotate-180' : ''}" data-id="${source.id}">
              <svg class="expand-chevron w-4 h-4 text-gray-500 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            </button>
          </td>
          <td class="px-4 py-3">
            <div class="flex items-center gap-2">
              <div class="status-dot ${config.dotClass}"></div>
              ${!isActive ? '<span class="text-xs bg-gray-200 text-gray-600 px-2 py-0.5 rounded">Inaktiv</span>' : ''}
            </div>
          </td>
          <td class="px-4 py-3">
            <span class="font-medium text-gray-900">${source.name}</span>
          </td>
          <td class="px-4 py-3">
            <span class="type-badge ${source.type}">${source.type}</span>
          </td>
          <td class="px-4 py-3 text-sm text-gray-600">${lastSuccess}</td>
          <td class="px-4 py-3 text-sm text-gray-600">${avgEvents}</td>
          <td class="px-4 py-3">
            ${errorCount > 0 
              ? `<span class="inline-flex items-center px-2 py-0.5 text-xs font-medium bg-red-100 text-red-700 rounded-full">${errorCount}</span>` 
              : '<span class="text-gray-400">0</span>'
            }
          </td>
        </tr>
        <tr class="expanded-content bg-gray-50 ${isExpanded ? '' : 'hidden'}" data-expanded-for="${source.id}">
          <td colspan="7" class="px-4 py-4">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <!-- Left Column: Details -->
              <div class="space-y-4">
                <div>
                  <h4 class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-2">Details</h4>
                  <div class="bg-white rounded-lg border border-gray-200 p-3 space-y-2 text-sm">
                    <div class="flex justify-between">
                      <span class="text-gray-500">URL:</span>
                      <a href="${source.url}" target="_blank" class="text-primary-600 hover:text-primary-700 truncate max-w-[250px]" title="${source.url}">${source.url}</a>
                    </div>
                    <div class="flex justify-between">
                      <span class="text-gray-500">Nächster Fetch:</span>
                      <span class="text-gray-900">${source.next_fetch_at ? formatFullDate(source.next_fetch_at) : 'Nicht geplant'}</span>
                    </div>
                    <div class="flex justify-between">
                      <span class="text-gray-500">Priorität:</span>
                      <span class="text-gray-900">${source.priority || '-'}</span>
                    </div>
                  </div>
                </div>
                
                ${source.consecutive_failures > 0 ? `
                <div>
                  <h4 class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-2">Letzter Fehler</h4>
                  <div class="bg-red-50 border border-red-200 rounded-lg p-3 text-sm text-red-700">
                    ${source.last_error || `${source.consecutive_failures} aufeinanderfolgende Fehler`}
                  </div>
                </div>
                ` : ''}

                <div>
                  <h4 class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-2">Letzte Fetches</h4>
                  <div id="fetch-history-${source.id}" class="bg-white rounded-lg border border-gray-200 p-3 text-sm text-gray-500">
                    Lade...
                  </div>
                </div>
              </div>
              
              <!-- Right Column: Actions -->
              <div>
                <h4 class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-2">Aktionen</h4>
                <div class="bg-white rounded-lg border border-gray-200 p-3 space-y-3">
                  <!-- Import Status -->
                  <div id="import-status-${source.id}" class="hidden bg-blue-50 border border-blue-200 rounded-lg p-3 mb-3">
                    <div class="flex items-center gap-2">
                      <svg class="w-4 h-4 text-blue-500 animate-spin-slow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                      </svg>
                      <span class="text-sm font-medium text-blue-700">Import läuft...</span>
                    </div>
                    <div id="import-details-${source.id}" class="text-xs text-blue-600 mt-1"></div>
                  </div>

                  <button 
                    class="trigger-btn w-full flex items-center justify-center gap-2 px-4 py-2 bg-primary-500 text-white rounded-lg hover:bg-primary-600 transition text-sm font-medium disabled:opacity-50 disabled:cursor-not-allowed"
                    data-id="${source.id}"
                    ${!isActive ? 'disabled' : ''}
                  >
                    <svg class="trigger-icon w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                    </svg>
                    <span class="trigger-text">Jetzt abrufen</span>
                  </button>
                  
                  <button 
