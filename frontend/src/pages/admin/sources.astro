  }

  function wizardToStep3() {
    const url = (document.getElementById('wizard-url').value || '').trim();
    document.getElementById('wizard-url-readonly').value = url;
    const rec = wizardDetection?.recommendation || 'scraper';
    const typeMap = { rss: 'rss', ics: 'ics', scraper: 'scraper', unknown: 'scraper' };
    document.getElementById('wizard-type').value = typeMap[rec] || 'scraper';
    try {
      const u = new URL(url);
      if (!document.getElementById('wizard-name').value) {
        document.getElementById('wizard-name').value = u.hostname.replace(/^www\./, '') + ' Events';
      }
    } catch (_) {}
    wizardShowStep(3);
  }

  async function runDryRun(sourceId) {
    const content = document.getElementById('dryrun-content');
    content.innerHTML = '<p class="text-gray-500">Dry-Run läuft (kann bis zu 2 Min. dauern)...</p>';
    document.getElementById('dryrun-modal').classList.remove('hidden');
    try {
      const res = await apiFetch(`/api/sources/${sourceId}/trigger`, {
        method: 'POST',
        body: JSON.stringify({ dry_run: true }),
      });
      const d = res.data || res;
      const found = d.events_found ?? 0;
      const unique = d.events_unique ?? found;
      const candidates = d.candidates || [];
      let html = `
        <p class="font-medium text-gray-900">${found} Events gefunden</p>
        <p class="text-gray-500 mt-1">${unique} eindeutig (nach Dedupe)</p>
        <p class="text-gray-500 text-xs mt-2">Es wurde nichts in die Datenbank geschrieben.</p>
      `;
      if (candidates.length > 0) {
        html += '<p class="font-medium text-gray-700 mt-4 mb-2">Beispiele (bis zu 5):</p><ul class="list-disc list-inside space-y-1 text-gray-600">';
        candidates.slice(0, 5).forEach(c => {
          const title = c?.data?.title || c?.title || 'Ohne Titel';
          html += `<li>${title}</li>`;
        });
        html += '</ul>';
      }
      content.innerHTML = html;
    } catch (e) {
      content.innerHTML = `<p class="text-red-600">Fehler: ${e.message || 'Unbekannt'}</p>`;
    }
  }

  async function wizardSave(e) {
    e.preventDefault();
    const name = document.getElementById('wizard-name').value?.trim();
    const url = document.getElementById('wizard-url-readonly').value?.trim() || document.getElementById('wizard-url').value?.trim();
    if (!name || !url) {
      alert('Name und URL sind Pflichtfelder.');
      return;
    }
    const data = {
      name,
      url,
      type: document.getElementById('wizard-type').value,
      priority: parseInt(document.getElementById('wizard-priority').value, 10) || 5,
      fetch_interval_minutes: parseInt(document.getElementById('wizard-interval').value, 10) || 60,
      is_active: document.getElementById('wizard-active').checked,
    };
    try {
      await apiFetch('/api/sources', { method: 'POST', body: JSON.stringify(data) });
      closeWizard();
      loadSources();
    } catch (err) {
      alert('Fehler beim Speichern: ' + (err.message || 'Unbekannt'));
    }
  }

  // Initial load
  loadSources();
  
  // Start global status polling for active fetches
  startGlobalStatusPolling();
  
  // Cleanup on page unload
  window.addEventListener('beforeunload', () => {
    if (globalStatusInterval) {
      clearInterval(globalStatusInterval);
    }
    Object.values(activePolling).forEach(interval => clearInterval(interval));
  });
</script>
