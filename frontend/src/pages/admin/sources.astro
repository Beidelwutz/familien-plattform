<script is:inline define:vars={{ API_URL }}>
  let sources = [];
  let filteredSources = [];
  let pendingAiCounts = {}; // sourceId -> count
  let expandedRows = new Set();
  let activePolling = {};
  let deleteSourceId = null;
  let activeRunsBySource = {}; // Maps source_id -> active run data
  let globalStatusInterval = null;
  let bulkPendingState = null; // { sourceId, sourceName, action, eventIds }
  const token = localStorage.getItem('auth_token');
  const BULK_LIMIT = 200;

  // Status config
  const statusConfig = {
    healthy: { color: 'green', label: 'Healthy', dotClass: 'healthy' },
    degraded: { color: 'yellow', label: 'Degraded', dotClass: 'degraded' },
    failing: { color: 'orange', label: 'Failing', dotClass: 'failing' },
    dead: { color: 'red', label: 'Dead', dotClass: 'dead' },
    unknown: { color: 'gray', label: 'Unknown', dotClass: 'unknown' },
  };

  // API helper
  async function apiFetch(endpoint, options = {}) {
    const res = await fetch(`${API_URL}${endpoint}`, {
      ...options,
      headers: {
        'Content-Type': 'application/json',
        Authorization: `Bearer ${token}`,
        ...options.headers,
      },
    });
    if (res.status === 401 || res.status === 403) {
      localStorage.removeItem('auth_token');
      window.location.href = '/login?redirect=/admin/sources';
      throw new Error('Unauthorized');
    }
    const data = await res.json();
    // Throw error for non-success responses so they're caught in try/catch
    if (!res.ok && data.error) {
      throw new Error(data.error.message || `HTTP ${res.status}`);
    }
    return data;
  }

  // Format relative time
  function formatRelativeTime(dateStr) {
    if (!dateStr) return 'Nie';
    const date = new Date(dateStr);
    const now = new Date();
    const diffMs = now - date;
    const diffMins = Math.floor(diffMs / 60000);
    const diffHours = Math.floor(diffMins / 60);
    const diffDays = Math.floor(diffHours / 24);
    
    if (diffMins < 1) return 'Gerade eben';
    if (diffMins < 60) return `vor ${diffMins} Min.`;
    if (diffHours < 24) return `vor ${diffHours} Std.`;
    if (diffDays < 7) return `vor ${diffDays} Tagen`;
    return date.toLocaleDateString('de-DE', { day: '2-digit', month: '2-digit' });
  }

  // Format full date
  function formatFullDate(dateStr) {
    if (!dateStr) return '-';
    return new Date(dateStr).toLocaleString('de-DE', {
      day: '2-digit',
      month: '2-digit',
      year: 'numeric',
      hour: '2-digit',
      minute: '2-digit'
    });
  }

  // Load sources
  async function loadSources() {
    document.getElementById('loading-state').classList.remove('hidden');
    document.getElementById('source-table').classList.add('hidden');
    document.getElementById('empty-state').classList.add('hidden');

    try {
      const [sourcesRes, countsRes] = await Promise.all([
        apiFetch('/api/sources'),
        apiFetch('/api/sources/pending-ai-counts').catch(() => ({ data: {} })),
      ]);
      sources = sourcesRes.data || [];
      pendingAiCounts = countsRes.data || {};
      
      // Count by status
      const counts = { healthy: 0, degraded: 0, failing: 0, dead: 0, unknown: 0 };
      sources.forEach(s => {
        const status = s.health_status || 'unknown';
        counts[status] = (counts[status] || 0) + 1;
      });

      document.getElementById('healthy-count').textContent = counts.healthy;
      document.getElementById('degraded-count').textContent = counts.degraded;
      document.getElementById('failing-count').textContent = counts.failing;
      document.getElementById('dead-count').textContent = counts.dead;
      document.getElementById('unknown-count').textContent = counts.unknown;

      const needsAttention = (counts.degraded || 0) + (counts.failing || 0) + (counts.dead || 0);
      const alertBanner = document.getElementById('health-alert-banner');
      const alertText = document.getElementById('health-alert-text');
      if (needsAttention > 0 && alertBanner && alertText) {
        alertBanner.classList.remove('hidden');
        const parts = [];
        if (counts.degraded) parts.push(`${counts.degraded} degraded`);
        if (counts.failing) parts.push(`${counts.failing} failing`);
        if (counts.dead) parts.push(`${counts.dead} dead`);
        alertText.textContent = parts.join(', ') + '. Filter anwenden oder Quellen prüfen.';
      } else if (alertBanner) {
        alertBanner.classList.add('hidden');
      }

      applyFilters();
    } catch (e) {
      console.error('Load error:', e);
    } finally {
      document.getElementById('loading-state').classList.add('hidden');
    }
  }

  // Global status polling - checks all active fetches every 5 seconds
  async function startGlobalStatusPolling() {
    if (globalStatusInterval) {
      clearInterval(globalStatusInterval);
    }

    // Initial fetch
    await updateActiveRuns();

    globalStatusInterval = setInterval(async () => {
      await updateActiveRuns();
    }, 5000);
  }

  async function updateActiveRuns() {
    try {
      const data = await apiFetch('/api/admin/ingest-runs/active');
      const activeRuns = data.data || [];
      
      // Build map: source_id -> run
      const newActiveRunsBySource = {};
      activeRuns.forEach(run => {
        if (run.source_id) {
          newActiveRunsBySource[run.source_id] = run;
        }
      });
      
      // Check if something changed
      const hadActiveRuns = Object.keys(activeRunsBySource).length > 0;
      const hasActiveRuns = activeRuns.length > 0;
      
      activeRunsBySource = newActiveRunsBySource;
      
      // Update the active fetches banner
      updateActiveFetchesBanner(activeRuns);
      
      // Re-render table if active runs changed
      if (hadActiveRuns || hasActiveRuns) {
        renderTable();
      }
    } catch (e) {
      console.error('Failed to fetch active runs:', e);
    }
  }

  function updateActiveFetchesBanner(activeRuns) {
    const banner = document.getElementById('active-fetches-banner');
    const countEl = document.getElementById('active-fetches-count');
    const listEl = document.getElementById('active-fetches-list');
    
    if (!banner || !countEl || !listEl) return;
    
    if (activeRuns.length === 0) {
      banner.classList.add('hidden');
      return;
    }
    
    banner.classList.remove('hidden');
    countEl.textContent = `${activeRuns.length} ${activeRuns.length === 1 ? 'Quelle wird' : 'Quellen werden'} gerade abgerufen`;
    
    listEl.innerHTML = activeRuns.map(run => {
      const elapsed = run.elapsed_seconds || 0;
      const elapsedStr = elapsed < 60 ? `${elapsed}s` : `${Math.floor(elapsed / 60)}m ${elapsed % 60}s`;
      const sourceName = run.source?.name || 'Unbekannte Quelle';
      const eventsFound = run.events_found || 0;
      
      return `
        <div class="flex items-center justify-between bg-white rounded-lg p-3 border border-blue-100">
          <div class="flex items-center gap-3">
            <svg class="w-4 h-4 text-blue-500 animate-spin" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
            </svg>
            <div>
              <span class="font-medium text-gray-900">${sourceName}</span>
              <span class="text-sm text-gray-500 ml-2">Läuft seit ${elapsedStr}</span>
            </div>
          </div>
          <div class="flex items-center gap-3">
            <span class="text-sm text-blue-600">${eventsFound} Events gefunden</span>
            <button 
              class="cancel-btn-banner px-3 py-1 text-xs font-medium text-red-600 bg-red-50 hover:bg-red-100 border border-red-200 rounded transition"
              data-id="${run.source_id}"
            >
              Abbrechen
            </button>
          </div>
        </div>
      `;
    }).join('');
    
    // Attach cancel event listeners for banner buttons
    listEl.querySelectorAll('.cancel-btn-banner').forEach(btn => {
      btn.addEventListener('click', (e) => {
        e.stopPropagation();
        cancelFetch(btn.dataset.id);
      });
    });
  }

  // Cancel an active fetch
  async function cancelFetch(sourceId) {
    if (!confirm('Möchten Sie diesen Fetch wirklich abbrechen?')) {
      return;
    }
    
    try {
      await apiFetch(`/api/sources/${sourceId}/cancel`, { method: 'POST' });
      
      // Remove from active runs immediately
      delete activeRunsBySource[sourceId];
      
      // Clear any polling for this source
      if (activePolling[sourceId]) {
        clearInterval(activePolling[sourceId]);
        delete activePolling[sourceId];
      }
      
      // Update UI
      await updateActiveRuns();
      loadSources();
    } catch (e) {
      alert('Fehler beim Abbrechen: ' + e.message);
    }
  }

  // Apply filters
  function applyFilters() {
    const searchTerm = document.getElementById('search-input').value.toLowerCase();
    const statusFilter = document.getElementById('status-filter').value;

    filteredSources = sources.filter(source => {
      const matchesSearch = !searchTerm || 
        source.name?.toLowerCase().includes(searchTerm) ||
        source.url?.toLowerCase().includes(searchTerm);
      
      const matchesStatus = statusFilter === 'all' || 
        (source.health_status || 'unknown') === statusFilter;
      
      return matchesSearch && matchesStatus;
    });

    renderTable();
  }

