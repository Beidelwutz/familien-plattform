      `;
    }).join('');

    // Attach event listeners
    attachRowEventListeners();
    
    // Load fetch history for expanded rows
    expandedRows.forEach(id => loadFetchHistory(id));
  }

  // Attach event listeners to table rows
  function attachRowEventListeners() {
    // Expand buttons
    document.querySelectorAll('.expand-btn').forEach(btn => {
      btn.addEventListener('click', (e) => {
        e.stopPropagation();
        toggleRowExpand(btn.dataset.id);
      });
    });

    // Row click to expand
    document.querySelectorAll('.source-row').forEach(row => {
      row.addEventListener('click', (e) => {
        if (!e.target.closest('button') && !e.target.closest('input') && !e.target.closest('a') && !e.target.closest('label')) {
          toggleRowExpand(row.dataset.id);
        }
      });
    });

    // Trigger buttons
    document.querySelectorAll('.trigger-btn').forEach(btn => {
      btn.addEventListener('click', (e) => {
        e.stopPropagation();
        triggerFetch(btn.dataset.id, btn);
      });
    });

    // Edit buttons
    document.querySelectorAll('.edit-btn').forEach(btn => {
      btn.addEventListener('click', (e) => {
        e.stopPropagation();
        openEditModal(btn.dataset.id);
      });
    });

    // Delete buttons
    document.querySelectorAll('.delete-btn').forEach(btn => {
      btn.addEventListener('click', (e) => {
        e.stopPropagation();
        openDeleteModal(btn.dataset.id, btn.dataset.name);
      });
    });

    // Toggle active switches
    document.querySelectorAll('.toggle-active').forEach(toggle => {
      toggle.addEventListener('change', (e) => {
        e.stopPropagation();
        toggleActive(toggle.dataset.id, toggle.checked);
      });
    });
  }

  // Toggle row expansion
  function toggleRowExpand(id) {
    const row = document.querySelector(`.source-row[data-id="${id}"]`);
    const expandedRow = document.querySelector(`tr[data-expanded-for="${id}"]`);
    
    if (expandedRows.has(id)) {
      expandedRows.delete(id);
      row?.classList.remove('expanded');
      expandedRow?.classList.add('hidden');
    } else {
      expandedRows.add(id);
      row?.classList.add('expanded');
      expandedRow?.classList.remove('hidden');
      loadFetchHistory(id);
    }
  }

  // Load fetch history for a source
  async function loadFetchHistory(sourceId) {
    const historyEl = document.getElementById(`fetch-history-${sourceId}`);
    if (!historyEl) return;

    try {
      const data = await apiFetch(`/api/admin/ingest-runs?source_id=${sourceId}&limit=5`);
      const runs = data.data || [];

      if (runs.length === 0) {
        historyEl.innerHTML = '<span class="text-gray-400">Keine Fetches vorhanden</span>';
        return;
      }

      historyEl.innerHTML = runs.map(run => {
        const statusColors = {
          success: 'bg-green-100 text-green-700',
          partial: 'bg-yellow-100 text-yellow-700',
          failed: 'bg-red-100 text-red-700',
          running: 'bg-blue-100 text-blue-700',
        };
        const statusColor = statusColors[run.status] || 'bg-gray-100 text-gray-700';
        const date = formatRelativeTime(run.started_at);
        const eventsInfo = run.status === 'running'
          ? `${run.events_found ?? 0} gefunden, läuft...`
          : `${run.events_created || 0} neu, ${run.events_updated || 0} aktualisiert`;

        return `
          <div class="flex items-center justify-between py-1 ${runs.indexOf(run) > 0 ? 'border-t border-gray-100' : ''}">
            <span class="text-gray-600">${date}</span>
            <div class="flex items-center gap-2">
              <span class="text-xs">${eventsInfo}</span>
              <span class="px-2 py-0.5 text-xs rounded-full ${statusColor}">${run.status}</span>
            </div>
          </div>
        `;
      }).join('');
    } catch (e) {
      historyEl.innerHTML = '<span class="text-red-500">Fehler beim Laden</span>';
    }
  }

  // Trigger fetch for a source
  async function triggerFetch(id, btn) {
    const source = sources.find(s => s.id === id);
    const sourceName = source?.name || 'diese Quelle';

    const triggerIcon = btn.querySelector('.trigger-icon');
    const triggerText = btn.querySelector('.trigger-text');
    const importStatus = document.getElementById(`import-status-${id}`);
    const importDetails = document.getElementById(`import-details-${id}`);
    
    // Show loading state
    btn.disabled = true;
    triggerIcon?.classList.add('animate-spin-slow');
    triggerText.textContent = 'Wird gestartet...';

    try {
      const response = await apiFetch(`/api/sources/${id}/trigger`, { method: 'POST' });
      
      if (response.success && response.data?.ingest_run_id) {
        // Show import status
        importStatus?.classList.remove('hidden');
        importDetails.textContent = '';
        
        // Start polling for status
        pollRunStatus(id, response.data.ingest_run_id);
      } else {
        // Show detailed error for debugging
        const errorDetail = response.error || response.message || JSON.stringify(response);
        console.error('Trigger response:', response);
        alert(`Import fehlgeschlagen: ${errorDetail}`);
      }
    } catch (e) {
      alert('Fehler beim Starten: ' + e.message);
    } finally {
      btn.disabled = false;
      triggerIcon?.classList.remove('animate-spin-slow');
      triggerText.textContent = 'Jetzt abrufen';
    }
  }

  // Poll for run status (with elapsed time and stuck hint)
  const pollStartTime = {}; // sourceId -> timestamp when polling started

  async function pollRunStatus(sourceId, runId) {
    if (activePolling[sourceId]) {
      clearInterval(activePolling[sourceId]);
    }
    pollStartTime[sourceId] = Date.now();

    const importStatus = document.getElementById(`import-status-${sourceId}`);
    const importDetails = document.getElementById(`import-details-${sourceId}`);

    function formatElapsed() {
      const start = pollStartTime[sourceId];
      if (!start) return '';
      const sec = Math.floor((Date.now() - start) / 1000);
      if (sec < 60) return `${sec} s`;
      const min = Math.floor(sec / 60);
      return `${min} min ${sec % 60} s`;
    }

    function updateRunningUI(run) {
      const eventsFound = run.events_found ?? 0;
      const elapsed = formatElapsed();
      const stuckHint = (Date.now() - pollStartTime[sourceId]) > 30000
        ? ' – Bei langer Wartezeit: AI-Worker prüfen (läuft er? Queue?)'
        : '';
      if (importDetails) {
        importDetails.innerHTML = `
          <span>${eventsFound} Events gefunden</span>
          <span class="text-blue-600"> · Läuft seit ${elapsed}</span>
          ${stuckHint ? `<br><span class="text-amber-600 text-xs">${stuckHint}</span>` : ''}
        `;
      }
    }

    let pollCount = 0;
    const maxPolls = 90; // 90 * 2s = 3 min

    activePolling[sourceId] = setInterval(async () => {
      pollCount++;

      if (pollCount > maxPolls) {
        clearInterval(activePolling[sourceId]);
        delete activePolling[sourceId];
        delete pollStartTime[sourceId];
        if (importStatus) {
          importStatus.innerHTML = `
            <div class="flex items-center gap-2">
              <span class="text-yellow-600">⚠</span>
              <span class="text-sm font-medium text-yellow-700">Timeout – Run läuft noch im Backend. Seite neu laden oder Run auf der Runs-Seite prüfen.</span>
            </div>
          `;
        }
        return;
      }

      try {
        const data = await apiFetch(`/api/admin/ingest-runs/${runId}`);
        const run = data.data;

        if (['success', 'partial', 'failed'].includes(run.status)) {
          clearInterval(activePolling[sourceId]);
          delete activePolling[sourceId];
          delete pollStartTime[sourceId];

          const statusConfig = {
            success: { icon: '✓', color: 'green', label: 'Erfolgreich' },
            partial: { icon: '⚠', color: 'yellow', label: 'Teilweise erfolgreich' },
            failed: { icon: '✕', color: 'red', label: 'Fehlgeschlagen' },
          };
          const config = statusConfig[run.status];

          if (importStatus) {
            importStatus.className = `bg-${config.color}-50 border border-${config.color}-200 rounded-lg p-3 mb-3`;
            importStatus.innerHTML = `
              <div class="flex items-center gap-2">
                <span class="text-${config.color}-600">${config.icon}</span>
                <span class="text-sm font-medium text-${config.color}-700">${config.label}</span>
              </div>
              <div class="text-xs text-${config.color}-600 mt-1">
                ${run.events_created || 0} neu | ${run.events_updated || 0} aktualisiert | ${run.events_skipped || 0} übersprungen
              </div>
            `;
          }

          setTimeout(() => {
            loadSources();
            loadFetchHistory(sourceId);
          }, 2000);
        } else {
          // Still running – show progress and elapsed time
          updateRunningUI(run);
        }
      } catch (e) {
        console.error('Poll error:', e);
      }
    }, 2000);

    // First update immediately so "Läuft seit 0 s" and events count show right away
    (async () => {
      try {
        const data = await apiFetch(`/api/admin/ingest-runs/${runId}`);
        const run = data.data;
        if (run && !['success', 'partial', 'failed'].includes(run.status)) {
          updateRunningUI(run);
        }
      } catch (_) {}
    })();
  }

  // Toggle active status
  async function toggleActive(id, isActive) {
    try {
      await apiFetch(`/api/sources/${id}`, {
        method: 'PATCH',
        body: JSON.stringify({ is_active: isActive }),
      });
      loadSources();
    } catch (e) {
      alert('Fehler: ' + e.message);
      // Revert toggle
      const toggle = document.querySelector(`.toggle-active[data-id="${id}"]`);
      if (toggle) toggle.checked = !isActive;
    }
  }

  // Open edit modal
  function openEditModal(id) {
    const source = sources.find(s => s.id === id);
    if (!source && id !== 'new') return;

    const modal = document.getElementById('edit-modal');
    const title = document.getElementById('modal-title');
    
    if (id === 'new') {
      title.textContent = 'Neue Quelle erstellen';
      document.getElementById('edit-id').value = '';
      document.getElementById('edit-name').value = '';
      document.getElementById('edit-url').value = '';
      document.getElementById('edit-type').value = 'rss';
      document.getElementById('edit-priority').value = '5';
      document.getElementById('edit-interval').value = '60';
      document.getElementById('edit-active').checked = true;
    } else {
      title.textContent = 'Quelle bearbeiten';
      document.getElementById('edit-id').value = source.id;
      document.getElementById('edit-name').value = source.name || '';
      document.getElementById('edit-url').value = source.url || '';
      document.getElementById('edit-type').value = source.type || 'rss';
      document.getElementById('edit-priority').value = source.priority || '';
      document.getElementById('edit-interval').value = source.fetch_interval_minutes || '';
      document.getElementById('edit-active').checked = source.is_active !== false;
    }

    modal.classList.remove('hidden');
  }

  // Close edit modal
  function closeEditModal() {
    document.getElementById('edit-modal').classList.add('hidden');
  }

  // Save source
  async function saveSource(e) {
    e.preventDefault();
    
    const id = document.getElementById('edit-id').value;
    const data = {
      name: document.getElementById('edit-name').value,
      url: document.getElementById('edit-url').value,
      type: document.getElementById('edit-type').value,
      priority: parseInt(document.getElementById('edit-priority').value) || null,
      fetch_interval_minutes: parseInt(document.getElementById('edit-interval').value) || null,
      is_active: document.getElementById('edit-active').checked,
    };

    try {
      if (id) {
        await apiFetch(`/api/sources/${id}`, {
          method: 'PATCH',
          body: JSON.stringify(data),
        });
      } else {
        await apiFetch('/api/sources', {
          method: 'POST',
          body: JSON.stringify(data),
        });
      }
      closeEditModal();
      loadSources();
    } catch (e) {
      alert('Fehler beim Speichern: ' + e.message);
    }
  }

  // Open delete modal
  function openDeleteModal(id, name) {
    deleteSourceId = id;
    document.getElementById('delete-message').textContent = 
      `Möchten Sie "${name}" wirklich löschen? Diese Aktion kann nicht rückgängig gemacht werden.`;
    document.getElementById('delete-modal').classList.remove('hidden');
  }

  // Close delete modal
  function closeDeleteModal() {
    deleteSourceId = null;
    document.getElementById('delete-modal').classList.add('hidden');
  }

  // Confirm delete
  async function confirmDelete() {
    if (!deleteSourceId) return;

    try {
      await apiFetch(`/api/sources/${deleteSourceId}`, { method: 'DELETE' });
      closeDeleteModal();
      expandedRows.delete(deleteSourceId);
      loadSources();
    } catch (e) {
      alert('Fehler beim Löschen: ' + e.message);
    }
  }

  // Trigger all enabled sources
  async function triggerAll() {
    if (!confirm('Möchten Sie wirklich alle aktiven Quellen abrufen? Dies kann einige Zeit dauern.')) {
      return;
    }

    const btn = document.getElementById('trigger-all-btn');
    const originalText = btn.innerHTML;
    btn.disabled = true;
    btn.innerHTML = `
      <svg class="w-4 h-4 animate-spin-slow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
      </svg>
      Wird gestartet...
    `;

    try {
      const activeSources = sources.filter(s => s.is_active !== false);
      let triggered = 0;
      
      for (const source of activeSources) {
        try {
          await apiFetch(`/api/sources/${source.id}/trigger`, { method: 'POST' });
          triggered++;
        } catch (e) {
          console.error(`Failed to trigger ${source.name}:`, e);
        }
      }
      
      alert(`${triggered} von ${activeSources.length} Quellen wurden gestartet.`);
      loadSources();
    } catch (e) {
      alert('Fehler: ' + e.message);
    } finally {
      btn.disabled = false;
      btn.innerHTML = originalText;
    }
  }

  // Event listeners
  document.getElementById('search-input').addEventListener('input', applyFilters);
  document.getElementById('status-filter').addEventListener('change', applyFilters);
  document.getElementById('trigger-all-btn').addEventListener('click', triggerAll);
  document.getElementById('add-source-btn').addEventListener('click', () => openEditModal('new'));
  document.getElementById('modal-close').addEventListener('click', closeEditModal);
  document.getElementById('modal-cancel').addEventListener('click', closeEditModal);
  document.getElementById('edit-form').addEventListener('submit', saveSource);
  document.getElementById('delete-cancel').addEventListener('click', closeDeleteModal);
  document.getElementById('delete-confirm').addEventListener('click', confirmDelete);

  // Close modals on backdrop click
  document.getElementById('edit-modal').addEventListener('click', (e) => {
    if (e.target.id === 'edit-modal') closeEditModal();
  });
  document.getElementById('delete-modal').addEventListener('click', (e) => {
    if (e.target.id === 'delete-modal') closeDeleteModal();
  });

  // Close modals on Escape
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') {
      closeEditModal();
      closeDeleteModal();
    }
  });

  // Initial load
  loadSources();
</script>
