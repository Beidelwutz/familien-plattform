---
import '../styles/global.css';
import CookieBanner from '../components/common/CookieBanner.astro';

interface Props {
  title: string;
  description?: string;
  hideFooter?: boolean;
}

const { 
  title, 
  description = "Finde Events, Kurse und Ferienangebote f√ºr Familien in Karlsruhe. Mit KI-gest√ºtztem Tagesplaner.",
  hideFooter = false,
} = Astro.props;

const currentYear = new Date().getFullYear();
---

<!DOCTYPE html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    
    <!-- Preconnect -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
    
    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="de_DE" />
    <meta property="og:site_name" content="familienlokal" />
    
    <!-- Theme Color -->
    <meta name="theme-color" content="#4F46E5" />
  </head>
  <body class="min-h-screen flex flex-col">
    <!-- Auth Token Sync - ensures localStorage token is synced with Supabase session -->
    <script>
      import { syncAuthToken } from '../lib/authSync';
      // Sync auth token on page load to prevent redirect loops
      syncAuthToken();
    </script>
    
    <!-- Skip Links for Keyboard Navigation (Accessibility) -->
    <a href="#main-content" class="sr-only focus:not-sr-only focus:fixed focus:top-4 focus:left-4 focus:z-[100] focus:bg-primary-500 focus:text-white focus:px-4 focus:py-2 focus:rounded-lg focus:shadow-lg">
      Zum Hauptinhalt springen
    </a>
    <a href="#main-navigation" class="sr-only focus:not-sr-only focus:fixed focus:top-4 focus:left-48 focus:z-[100] focus:bg-primary-500 focus:text-white focus:px-4 focus:py-2 focus:rounded-lg focus:shadow-lg">
      Zur Navigation springen
    </a>
    
    <slot />

    {!hideFooter && (
      <footer class="bg-gray-900 text-white mt-auto" role="contentinfo">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
          <div class="grid grid-cols-2 md:grid-cols-4 gap-8 mb-8">
            <!-- Brand -->
            <div class="col-span-2 md:col-span-1">
              <a href="/" class="flex items-center gap-2 mb-4" aria-label="familienlokal - Zur Startseite">
                <div class="w-10 h-10 bg-gradient-to-br from-primary-500 to-primary-600 rounded-xl flex items-center justify-center" aria-hidden="true">
                  <span class="text-white text-xl">üè†</span>
                </div>
                <span class="text-xl font-bold">familien<span class="text-primary-400">lokal</span></span>
              </a>
              <p class="text-gray-400 text-sm">
                Familienaktivit√§ten in Karlsruhe entdecken und planen.
              </p>
            </div>

            <!-- Links -->
            <nav aria-label="Entdecken">
              <h4 class="font-semibold mb-4" id="footer-discover">Entdecken</h4>
              <ul class="space-y-2" aria-labelledby="footer-discover">
                <li><a href="/suche" class="text-gray-400 hover:text-white transition-colors text-sm focus:outline-none focus:ring-2 focus:ring-primary-400 focus:ring-offset-2 focus:ring-offset-gray-900 rounded">Events finden</a></li>
                <li><a href="/plan" class="text-gray-400 hover:text-white transition-colors text-sm focus:outline-none focus:ring-2 focus:ring-primary-400 focus:ring-offset-2 focus:ring-offset-gray-900 rounded">Plan erstellen</a></li>
                <li><a href="/merkliste" class="text-gray-400 hover:text-white transition-colors text-sm focus:outline-none focus:ring-2 focus:ring-primary-400 focus:ring-offset-2 focus:ring-offset-gray-900 rounded">Merkliste</a></li>
              </ul>
            </nav>

            <!-- For Providers -->
            <nav aria-label="F√ºr Anbieter">
              <h4 class="font-semibold mb-4" id="footer-providers">F√ºr Anbieter</h4>
              <ul class="space-y-2" aria-labelledby="footer-providers">
                <li><a href="/anbieter" class="text-gray-400 hover:text-white transition-colors text-sm focus:outline-none focus:ring-2 focus:ring-primary-400 focus:ring-offset-2 focus:ring-offset-gray-900 rounded">Anbieter werden</a></li>
                <li><a href="/anbieter/login" class="text-gray-400 hover:text-white transition-colors text-sm focus:outline-none focus:ring-2 focus:ring-primary-400 focus:ring-offset-2 focus:ring-offset-gray-900 rounded">Anbieter-Login</a></li>
              </ul>
            </nav>

            <!-- Legal -->
            <nav aria-label="Rechtliches">
              <h4 class="font-semibold mb-4" id="footer-legal">Rechtliches</h4>
              <ul class="space-y-2" aria-labelledby="footer-legal">
                <li><a href="/impressum" class="text-gray-400 hover:text-white transition-colors text-sm focus:outline-none focus:ring-2 focus:ring-primary-400 focus:ring-offset-2 focus:ring-offset-gray-900 rounded">Impressum</a></li>
                <li><a href="/datenschutz" class="text-gray-400 hover:text-white transition-colors text-sm focus:outline-none focus:ring-2 focus:ring-primary-400 focus:ring-offset-2 focus:ring-offset-gray-900 rounded">Datenschutz</a></li>
                <li><a href="/agb" class="text-gray-400 hover:text-white transition-colors text-sm focus:outline-none focus:ring-2 focus:ring-primary-400 focus:ring-offset-2 focus:ring-offset-gray-900 rounded">AGB</a></li>
                <li><button onclick="window.showCookieSettings?.()" class="text-gray-400 hover:text-white transition-colors text-sm focus:outline-none focus:ring-2 focus:ring-primary-400 focus:ring-offset-2 focus:ring-offset-gray-900 rounded">Cookie-Einstellungen</button></li>
              </ul>
            </nav>
          </div>

          <!-- Bottom -->
          <div class="border-t border-gray-800 pt-8 flex flex-col sm:flex-row justify-between items-center gap-4">
            <p class="text-gray-500 text-sm">
              &copy; {currentYear} familienlokal. Alle Rechte vorbehalten.
            </p>
            <div class="flex items-center gap-4">
              <a href="mailto:info@familien-lokal.de" class="text-gray-400 hover:text-white transition-colors focus:outline-none focus:ring-2 focus:ring-primary-400 rounded p-1" aria-label="E-Mail an familienlokal senden">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
              </a>
            </div>
          </div>
        </div>
      </footer>
    )}

    <!-- Cookie Consent Banner -->
    <CookieBanner />
  </body>
</html>
