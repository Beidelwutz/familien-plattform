{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "astro",
  "crons": [
    {
      "path": "/api/cron/compute-trends",
      "schedule": "*/30 * * * *"
    },
    {
      "path": "/api/cron/check-sources",
      "schedule": "*/15 * * * *"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, max-age=0"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/cron/compute-trends",
      "destination": "https://api.familien-lokal.de/api/admin/trends/compute"
    },
    {
      "source": "/api/cron/check-sources",
      "destination": "https://api.familien-lokal.de/api/sources/cron/check"
    }
  ]
}
