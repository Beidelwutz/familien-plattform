{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "framework": "astro",
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "outputDirectory": "frontend/dist",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    }
  ],
  "functions": {
    "api/**/*.ts": {
      "runtime": "nodejs20.x",
      "maxDuration": 30
    }
  },
  "env": {
    "DATABASE_URL": "@database_url",
    "REDIS_URL": "@redis_url"
  }
}
